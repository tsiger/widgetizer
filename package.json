{
  "name": "widgetizer",
  "version": "0.9.3",
  "description": "A visual website builder with theme support",
  "author": "Widgetizer",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "engines": {
    "node": ">=20.19.5"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint src server",
    "lint:electron": "eslint electron",
    "lint:all": "eslint .",
    "preview": "vite preview",
    "server": "nodemon server/index.js",
    "start": "node server/index.js",
    "dev:frontend": "wait-on http://localhost:3001/health && npm run dev",
    "dev:all": "concurrently \"npm run server\" \"npm run dev:frontend\"",
    "start:prod": "cross-env NODE_ENV=production npm start",
    "electron:dev": "concurrently -k \"cross-env NODE_ENV=development npm run server\" \"cross-env NODE_ENV=development npm run dev\" \"wait-on http://localhost:3000 && cross-env ELECTRON_DEV=1 ELECTRON_DISABLE_INTERNAL_SERVER=1 VITE_DEV_SERVER_URL=http://localhost:3000 electron .\"",
    "test": "node --test --test-reporter ./server/tests/reporter.js server/tests/*.test.js",
    "test:verbose": "node --test server/tests/*.test.js",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && cross-env npm_config_platform=win32 npm_config_arch=x64 npm_config_include=optional npm install --no-save && cross-env npm_config_platform=win32 npm_config_arch=x64 npm_config_runtime=electron npm_config_disturl=https://electronjs.org/headers electron-builder install-app-deps --platform win32 --arch x64 && electron-builder --win"
  },
  "build": {
    "appId": "com.widgetizer.app",
    "productName": "Widgetizer",
    "directories": {
      "output": "dist-electron",
      "buildResources": "electron/resources"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "src/core/**/*",
      "src/utils/**/*",
      "src/config/**/*",
      "src/locales/**/*",
      "themes/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [],
    "asar": true,
    "asarUnpack": [
      "themes/**",
      "dist/**",
      "src/core/assets/**",
      "src/utils/previewRuntime.js",
      "node_modules/sharp/**",
      "node_modules/@img/sharp-*/**",
      "node_modules/@img/sharp-libvips-*/**"
    ],
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@floating-ui/dom": "^1.7.5",
    "@tiptap/extension-link": "^3.18.0",
    "@tiptap/pm": "^3.18.0",
    "@tiptap/react": "^3.18.0",
    "@tiptap/starter-kit": "^3.18.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "html-validate": "^10.7.0",
    "i18next": "^25.6.3",
    "isomorphic-dompurify": "^2.25.0",
    "liquidjs": "^10.21.0",
    "lucide-react": "^0.563.0",
    "multer": "^2.0.2",
    "prettier": "^3.5.3",
    "prismjs": "^1.30.0",
    "rc-slider": "^11.1.8",
    "react": "^19.1.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.66.1",
    "react-i18next": "^16.3.5",
    "react-router-dom": "^7.5.0",
    "react-simple-code-editor": "^0.14.1",
    "sharp": "^0.34.0",
    "slugify": "^1.6.6",
    "turndown": "^7.2.2",
    "uuid": "^13.0.0",
    "zundo": "^2.3.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@tailwindcss/postcss": "^4.1.3",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^17.0.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3",
    "wrangler": "^4.63.0"
  }
}
