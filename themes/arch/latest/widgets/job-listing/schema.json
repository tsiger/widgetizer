{
  "type": "job-listing",
  "displayName": "Job Listing",
  "aliases": ["careers", "hiring", "positions", "vacancies"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Join Our Team"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Open Positions"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Show department filters",
      "default": true
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "highlight", "label": "Highlight" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "job",
      "displayName": "Job",
      "settings": [
        {
          "type": "header",
          "id": "content_header",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Job title",
          "default": "Software Engineer"
        },
        {
          "type": "text",
          "id": "department",
          "label": "Department",
          "default": "Engineering"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "Remote"
        },
        {
          "type": "select",
          "id": "type",
          "label": "Employment type",
          "default": "full-time",
          "options": [
            { "value": "full-time", "label": "Full-Time" },
            { "value": "part-time", "label": "Part-Time" },
            { "value": "contract", "label": "Contract" },
            { "value": "internship", "label": "Internship" }
          ]
        },
        {
          "type": "link",
          "id": "apply_link",
          "label": "Apply button",
          "default": {
            "text": "Apply Now",
            "href": "#",
            "target": "_self"
          }
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
