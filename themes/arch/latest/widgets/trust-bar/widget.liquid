<section
  id="{{ widget.id }}"
  class="widget widget-trust-bar widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="trust-bar"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .trust-bar-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-lg);
        list-style: none;
        padding: 0;
        margin: 0;
      }

      & .trust-bar-item {
        display: flex;
        align-items: center;
        gap: var(--space-md);
      }

      & .trust-bar-icon {
        flex-shrink: 0;
        width: var(--icon-size-lg);
        height: var(--icon-size-lg);
        color: var(--accent);
        stroke-width: 0.15rem;
      }

      & .trust-bar-text {
        flex: 1;
      }

      @media (min-width: 750px) {
        & .trust-bar-list {
          flex-direction: row;
          flex-wrap: wrap;
          justify-content: center;
          gap: 0;
        }

        & .trust-bar-item {
          flex: 1;
          min-width: 0;
          padding-block: var(--space-sm);
          {% if widget.settings.show_dividers %}
          padding-inline: var(--space-lg);
          border-inline-start: var(--border-width-thin) solid var(--border-color);
          {% else %}
          padding-inline: var(--space-md);
          {% endif %}
        }

        & .trust-bar-item:first-child {
          border-inline-start: none;
          {% if widget.settings.show_dividers %}
          padding-inline-start: 0;
          {% endif %}
        }

        & .trust-bar-item:last-child {
          {% if widget.settings.show_dividers %}
          padding-inline-end: 0;
          {% endif %}
        }
      }

      @media (min-width: 990px) {
        & .trust-bar-list {
          flex-wrap: nowrap;
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    <ul class="trust-bar-list">
      {% for blockId in widget.blocksOrder %}
        {% assign block = widget.blocks[blockId] %}
        <li class="trust-bar-item reveal reveal-up" style="--reveal-delay: {{ forloop.index0 }}" data-block-id="{{ blockId }}">
          {% if block.settings.icon != blank %}
            {% render 'icon', icon: block.settings.icon, class: 'trust-bar-icon' %}
          {% endif %}
          <span class="trust-bar-text block-text block-text-sm" data-setting="text">{{ block.settings.text }}</span>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
