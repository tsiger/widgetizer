<section
  id="{{ widget.id }}"
  class="widget widget-type-pricing widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="pricing"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      /* Featured Card - Accent Border */
      & .widget-card.is-featured {
        border-color: var(--accent);
        border-width: var(--border-width-medium);
      }

      /* Pricing Header */
      & .widget-card-header {
        text-align: center;
      }

      & .pricing-price {
        margin-block-end: var(--space-xs);
      }

      & .pricing-features {
        list-style: none;
        padding: 0;
        margin: 0;
        flex: 1;
      }

      & .pricing-feature {
        padding: var(--space-md) 0;
        border-block-end: var(--border-width-thin) solid var(--border-color);

        &:first-child {
          border-block-start: var(--border-width-thin) solid var(--border-color);
        }

        &:last-child {
          border-block-end: none;
          padding-block-end: var(--space-lg); /* Extra space before button */
        }
      }

      /* Smart layout for different item counts */
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% assign header_delay = 0 %}
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
          {% assign header_delay = header_delay | plus: 1 %}
        {% endif %}
        {% if widget.settings.title != blank %}
          {% if widget.index == 1 %}
            <h1 class="widget-headline reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="title">{{ widget.settings.title }}</h1>
          {% else %}
            <h2 class="widget-headline reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="title">{{ widget.settings.title }}</h2>
          {% endif %}
          {% assign header_delay = header_delay | plus: 1 %}
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <ul
        class="widget-card-grid widget-grid"
        style="--grid-cols-desktop: {{ widget.settings.columns_desktop }};"
      >
        {% assign item_heading_level = 'h3' %}
        {% if widget.settings.title == blank %}
          {% assign item_heading_level = 'h2' %}
        {% endif %}

        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <li class="widget-card reveal reveal-up {% if block.settings.featured %}is-featured{% endif %}" style="--reveal-delay: {{ forloop.index0 }}" data-block-id="{{ blockId }}">
            <div class="widget-card-header">
              {% if block.settings.title != blank %}
                <{{ item_heading_level }} class="widget-card-title" data-setting="title">{{ block.settings.title }}</{{ item_heading_level }}>
              {% endif %}
              {% if block.settings.price != blank %}
                <div class="pricing-price block-text block-text-5xl block-text-heading-weight block-text-heading" data-setting="price">{{ block.settings.price }}</div>
              {% endif %}
              {% if block.settings.period != blank %}
                <div class="widget-card-subtitle" data-setting="period">{{ block.settings.period }}</div>
              {% endif %}
            </div>
            <div class="widget-card-content">
              {% if block.settings.features != blank %}
                <ul class="pricing-features">
                  {% assign features = block.settings.features | split: '
' %}
                  {% for feature in features %}
                    {% assign trimmed_feature = feature | strip %}
                    {% if trimmed_feature != blank %}
                      <li class="pricing-feature block-text block-text-base">{{ trimmed_feature }}</li>
                    {% endif %}
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
            {% if block.settings.button_link.text != blank %}
              <div class="widget-card-footer">
                <a
                  href="{{ block.settings.button_link.href }}"
                  class="widget-button widget-button-full"
                  data-setting="button_link"
                  {% if block.settings.button_link.target == '_blank' %}
                    target="_blank" rel="noopener"
                  {% endif %}
                >
                  {{ block.settings.button_link.text }}
                </a>
              </div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
