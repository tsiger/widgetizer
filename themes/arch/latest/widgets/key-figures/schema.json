    {
      "type": "figure",
      "settings": {
        "number": "24",
        "suffix": "/7",
        "label": "Support",
        "description": "Always here to help"
      }
    },
    {
      "type": "figure",
      "settings": {
        "number": "10",
        "suffix": "+",
