{
  "type": "key-figures",
  "displayName": "Key Figures",
  "aliases": ["stats", "metrics", "data points", "numbers"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "By The Numbers"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "cards",
      "options": [
        { "value": "cards", "label": "Cards" },
        { "value": "bar", "label": "Horizontal Bar" }
      ]
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns (Desktop)",
      "default": 4,
      "min": 2,
      "max": 5,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "animate",
      "label": "Animate numbers",
      "default": true
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "highlight", "label": "Highlight" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "figure",
      "displayName": "Figure",
      "settings": [
        {
          "type": "header",
          "id": "content_header",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "500"
        },
        {
          "type": "text",
          "id": "suffix",
          "label": "Suffix",
          "default": "+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Projects"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
      "type": "figure",
      "settings": {
        "number": "500",
        "suffix": "+",
