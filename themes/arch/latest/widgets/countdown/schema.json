{
  "type": "countdown",
  "displayName": "Countdown Timer",
  "aliases": ["timer", "launch date", "offer ends", "deadline"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Coming Soon"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "id": "content_header",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "target_date",
      "label": "Target date (YYYY-MM-DD HH:MM)",
      "default": "2027-01-01 00:00"
    },
    {
      "type": "text",
      "id": "expired_message",
      "label": "Message when expired",
      "default": "The wait is over!"
    },
    {
      "type": "link",
      "id": "button",
      "label": "Call-to-action button"
    },
    {
      "type": "header",
      "id": "options_header",
      "label": "Options"
    },
    {
      "type": "checkbox",
      "id": "show_seconds",
      "label": "Show seconds",
      "default": true
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "select",
      "id": "style",
      "label": "Style",
      "options": [
        { "value": "cards", "label": "Cards" },
        { "value": "minimal", "label": "Minimal" }
      ],
      "default": "cards"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "highlight", "label": "Highlight" }
      ]
    }
  ]
}
