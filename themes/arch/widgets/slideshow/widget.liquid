{% enqueue_style "slideshow.css", { "priority": 30 } %}
{% assign slide_count = widget.blocksOrder.size %}
{% if slide_count > 1 %}
  {% enqueue_script "slideshow.js", { "priority": 30 } %}
{% endif %}

<section
  id="{{ widget.id }}"
  class="widget widget-slideshow widget-{{ widget.id }} {% unless widget.settings.fullwidth %} slideshow-constrained{% endunless %}"
  data-widget-id="{{ widget.id }}"
  data-widget-type="slideshow"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
  data-autoplay="{{ widget.settings.autoplay | default: false }}"
  data-autoplay-speed="{{ widget.settings.autoplay_speed | default: 5000 }}"
>
  <div class="slideshow-track reveal reveal-fade">
    {% for blockId in widget.blocksOrder %}
      {% assign block = widget.blocks[blockId] %}
      {% assign isFirst = forloop.first %}
      <div
        class="slideshow-slide widget {% if widget.settings.height == 'small' %}widget-height-half{% elsif widget.settings.height == 'medium' %}widget-height-two-thirds{% elsif widget.settings.height == 'large' %}widget-height-full{% endif %} {% if block.settings.image != blank %}has-bg-image has-overlay{% endif %} color-scheme-{{ block.settings.color_scheme }}{% if isFirst %} is-active{% endif %}"
        {% if block.settings.image != blank %}
          style="background-image: url('{{ block.settings.image | image: 'path', 'large' }}'); --widget-overlay-color: {{ block.settings.overlay_color | default: '#0a1e38bf' }}; --widget-overlay-opacity: 1;"
        {% elsif block.settings.color_scheme == 'highlight' %}
          style="--widget-bg-color: var(--bg-primary);"
        {% endif %}
        data-block-id="{{ blockId }}"
      >
        <div class="widget-container">
          <div class="widget-content widget-content-lg {% if widget.settings.alignment == 'center' %}widget-content-align-center{% else %}widget-content-align-start{% endif %}">
            {% if block.settings.heading_text != blank %}
              {% assign size_class = 'block-text-' | append: block.settings.heading_size %}
              {% if widget.index == 1 and forloop.first %}
                <h1 class="widget-headline block-text {{ size_class }} block-text-heading-weight block-text-heading" data-block-id="{{ blockId }}" data-setting="heading_text">
                  {{ block.settings.heading_text }}
                </h1>
              {% else %}
                <h2 class="widget-headline block-text {{ size_class }} block-text-heading-weight block-text-heading" data-block-id="{{ blockId }}" data-setting="heading_text">
                  {{ block.settings.heading_text }}
                </h2>
              {% endif %}
            {% endif %}
            {% if block.settings.text_content != blank %}
              {% assign size_class = 'block-text-' | append: block.settings.text_size %}
              {% assign style_class = '' %}
              {% if block.settings.text_uppercase %}{% assign style_class = style_class | append: ' block-text-uppercase' %}{% endif %}
              {% if block.settings.text_muted %}{% assign style_class = style_class | append: ' block-text-muted' %}{% endif %}
              <p class="widget-description block-text {{ size_class }}{{ style_class }}" data-block-id="{{ blockId }}" data-setting="text_content">
                {{ block.settings.text_content }}
              </p>
            {% endif %}
            {% if block.settings.button_link.text != blank or block.settings.button_link_2.text != blank %}
              {% assign hasSingleButton = false %}
              {% if block.settings.button_link.text != blank and block.settings.button_link_2.text == blank %}
                {% assign hasSingleButton = true %}
              {% elsif block.settings.button_link.text == blank and block.settings.button_link_2.text != blank %}
                {% assign hasSingleButton = true %}
              {% endif %}
              <div class="widget-actions{% if hasSingleButton %} widget-actions-single{% endif %}" data-block-id="{{ blockId }}">
                {% if block.settings.button_link.text != blank %}
                  {% if block.settings.button_size != 'small' and block.settings.button_size != blank %}
                    {% assign size_class = 'widget-button-' | append: block.settings.button_size %}
                  {% else %}
                    {% assign size_class = '' %}
                  {% endif %}
                  <a
                    href="{{ block.settings.button_link.href }}"
                    class="widget-button {{ size_class }} {% if block.settings.button_style == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                    data-setting="button_link"
                    {% if block.settings.button_link.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.button_link.text }}
                  </a>
                {% endif %}
                {% if block.settings.button_link_2.text != blank %}
                  {% if block.settings.button_size != 'small' and block.settings.button_size != blank %}
                    {% assign size_class = 'widget-button-' | append: block.settings.button_size %}
                  {% else %}
                    {% assign size_class = '' %}
                  {% endif %}
                  <a
                    href="{{ block.settings.button_link_2.href }}"
                    class="widget-button {{ size_class }} {% if block.settings.button_style_2 == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                    data-setting="button_link_2"
                    {% if block.settings.button_link_2.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.button_link_2.text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}

    {% if slide_count > 1 %}
      <!-- Navigation -->
      <button type="button" class="slideshow-nav slideshow-prev" aria-label="Previous slide">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </button>
      <button type="button" class="slideshow-nav slideshow-next" aria-label="Next slide">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 18l6-6-6-6" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </button>

      {% if widget.settings.autoplay %}
        <button
          class="slideshow-toggle visually-hidden"
          type="button"
          aria-pressed="false"
          aria-label="Pause autoplay"
        >
          Pause
        </button>
      {% endif %}

      <!-- Pagination -->
      <div class="slideshow-pagination">
        {% for blockId in widget.blocksOrder %}
          <button
            type="button"
            class="slideshow-dot{% if forloop.first %} is-active{% endif %}"
            data-index="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"
          ></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>
