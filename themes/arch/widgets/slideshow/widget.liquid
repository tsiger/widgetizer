{% enqueue_style "slideshow.css" %}
{% enqueue_script "slideshow.js" %}

<section
  id="{{ widget.id }}"
  class="widget widget-slideshow color-scheme-dark{% unless widget.settings.fullwidth %} slideshow-constrained{% endunless %}"
  data-widget-id="{{ widget.id }}"
  data-widget-type="slideshow"
  data-autoplay="{{ widget.settings.autoplay | default: false }}"
  data-autoplay-speed="{{ widget.settings.autoplay_speed | default: 5000 }}"
>
  <div class="slideshow-track">
    {% for blockId in widget.blocksOrder %}
      {% assign block = widget.blocks[blockId] %}
      {% assign isFirst = forloop.first %}
      <div
        class="slideshow-slide widget {% if widget.settings.height == 'small' %}widget-height-half{% elsif widget.settings.height == 'medium' %}widget-height-two-thirds{% elsif widget.settings.height == 'large' %}widget-height-full{% endif %} {% if block.settings.image != blank %}has-bg-image has-overlay overlay-medium{% endif %} color-scheme-dark{% if isFirst %} is-active{% endif %}"
        {% if block.settings.image != blank %}
          style="background-image: url('{{ block.settings.image | image: 'path', 'large' }}');"
        {% endif %}
        data-block-id="{{ blockId }}"
      >
        <div class="widget-container">
          <div class="widget-content widget-content-lg widget-content-align-center">
            {% if block.settings.eyebrow != blank %}
              <span class="widget-eyebrow" data-setting="eyebrow">{{ block.settings.eyebrow }}</span>
            {% endif %}
            {% if block.settings.headline != blank %}
              <h2 class="widget-headline" data-setting="headline">{{ block.settings.headline }}</h2>
            {% endif %}
            {% if block.settings.description != blank %}
              <p class="widget-description" data-setting="description">{{ block.settings.description }}</p>
            {% endif %}
            {% if block.settings.button_link.text != blank %}
              <div class="widget-actions">
                <a
                  href="{{ block.settings.button_link.href }}"
                  class="widget-button widget-button-primary"
                  data-setting="button_link"
                  {% if block.settings.button_link.target == '_blank' %}
                    target="_blank" rel="noopener"
                  {% endif %}
                >
                  {{ block.settings.button_link.text }}
                </a>
                {% if block.settings.secondary_link.text != blank %}
                  <a
                    href="{{ block.settings.secondary_link.href }}"
                    class="widget-button widget-button-secondary"
                    data-setting="secondary_link"
                    {% if block.settings.secondary_link.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.secondary_link.text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}

    <!-- Navigation -->
    <button class="slideshow-nav slideshow-prev" aria-label="Previous slide">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </button>
    <button class="slideshow-nav slideshow-next" aria-label="Next slide">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 18l6-6-6-6" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </button>

    <!-- Pagination -->
    <div class="slideshow-pagination">
      {% for blockId in widget.blocksOrder %}
        <button
          class="slideshow-dot{% if forloop.first %} is-active{% endif %}"
          data-index="{{ forloop.index0 }}"
          aria-label="Go to slide {{ forloop.index }}"
        ></button>
      {% endfor %}
    </div>
  </div>
</section>
