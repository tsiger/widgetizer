{
  "type": "slideshow",
  "displayName": "Slideshow",
  "settings": [
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "default": "medium",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ]
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Full width",
      "default": true
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Content alignment",
      "default": "center",
      "options": [
        { "value": "center", "label": "Center" },
        { "value": "start", "label": "Left" }
      ]
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Change slides every",
      "min": 3000,
      "max": 10000,
      "step": 1000,
      "default": 5000,
      "unit": "ms"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "displayName": "Slide",
      "settings": [
        {
          "type": "image",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "eyebrow",
          "label": "Eyebrow Text"
        },
        {
          "type": "text",
          "id": "headline",
          "label": "Headline",
          "default": "Slide Headline"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "link",
          "id": "button_link",
          "label": "Primary Button",
          "default": {
            "text": "Get Started",
            "href": "#",
            "target": "_self"
          }
        },
        {
          "type": "link",
          "id": "secondary_link",
          "label": "Secondary Button"
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
      "type": "slide",
      "settings": {
        "eyebrow": "Welcome",
        "headline": "Your First Slide",
        "description": "Add your content here",
        "button_link": {
          "text": "Learn More",
          "href": "#",
          "target": "_self"
        }
      }
    },
    {
      "type": "slide",
      "settings": {
        "eyebrow": "Featured",
        "headline": "Your Second Slide",
        "description": "Add your content here",
        "button_link": {
          "text": "Shop Now",
          "href": "#",
          "target": "_self"
        }
      }
    }
  ]
}
