<section id="{{ widget.id }}" class="widget" data-widget-id="{{ widget.id }}" data-widget-type="styles">
  <div class="widget-container">
    <div class="widget-header">
      <h2 class="widget-headline">Design System Showcase</h2>
      <p class="widget-description">A comprehensive style guide showing all available components and utilities</p>
    </div>

    <div class="widget-content">
      
      <!-- Typography Section -->
      <div style="margin-block-end: var(--space-6xl); padding-block-end: var(--space-4xl); border-block-end: var(--border-width-thin) solid var(--border-color);">
        <h3 class="widget-title">Typography</h3>
        
        <div style="margin-block-end: var(--space-4xl);">
          <h4 style="font-size: var(--font-size-xl); margin-block-end: var(--space-lg); color: var(--text-muted);">Headings</h4>
          <h1 style="margin-block-end: var(--space-md);">Heading 1 - Main Page Title</h1>
          <h2 style="margin-block-end: var(--space-md);">Heading 2 - Section Title</h2>
          <h3 style="margin-block-end: var(--space-md);">Heading 3 - Subsection Title</h3>
          <h4 style="margin-block-end: var(--space-md);">Heading 4 - Minor Title</h4>
          <h5 style="margin-block-end: var(--space-md);">Heading 5 - Small Title</h5>
          <h6 style="margin-block-end: var(--space-md);">Heading 6 - Smallest Title</h6>
        </div>

        <div style="margin-block-end: var(--space-4xl);">
          <h4 style="font-size: var(--font-size-xl); margin-block-end: var(--space-lg); color: var(--text-muted);">Utility Classes</h4>
          <div class="widget-eyebrow">Eyebrow Text - Above Headlines</div>
          <h2 class="widget-headline">Widget Headline - Large Display Text</h2>
          <h3 class="widget-title">Widget Title - Section Heading</h3>
          <h4 class="widget-subtitle">Widget Subtitle - Subsection</h4>
          <p class="widget-text">Widget Text - Standard body text with comfortable line height and spacing. This is the default text style used throughout widgets for descriptions and content.</p>
          <p class="widget-meta">Widget Meta - Small metadata text like dates, categories, or secondary information</p>
        </div>
      </div>

      <!-- Buttons Section -->
      <div style="margin-block-end: var(--space-6xl); padding-block-end: var(--space-4xl); border-block-end: var(--border-width-thin) solid var(--border-color);">
        <h3 class="widget-title">Buttons</h3>
        
        <div style="margin-block-end: var(--space-3xl);">
          <h4 style="font-size: var(--font-size-xl); margin-block-end: var(--space-lg); color: var(--text-muted);">Button Variants</h4>
          <div style="display: flex; flex-wrap: wrap; gap: var(--space-md); margin-block-end: var(--space-lg);">
            <button class="widget-button widget-button-primary">Primary Button</button>
            <button class="widget-button widget-button-secondary">Secondary Button</button>
          </div>
        </div>

        <div style="margin-block-end: var(--space-3xl);">
          <h4 style="font-size: var(--font-size-xl); margin-block-end: var(--space-lg); color: var(--text-muted);">Button Sizes</h4>
          <div style="display: flex; flex-wrap: wrap; align-items: center; gap: var(--space-md); margin-block-end: var(--space-lg);">
            <button class="widget-button">Small (Default)</button>
            <button class="widget-button widget-button-medium">Medium</button>
            <button class="widget-button widget-button-large">Large</button>
            <button class="widget-button widget-button-xlarge">Extra Large</button>
          </div>
          <button class="widget-button widget-button-full">Full Width Button</button>
        </div>
      </div>

      <!-- Cards Section -->
      <div style="margin-block-end: var(--space-6xl); padding-block-end: var(--space-4xl); border-block-end: var(--border-width-thin) solid var(--border-color);">
        <h3 class="widget-title">Cards</h3>
        
        <div class="widget-grid widget-grid-3">
          <!-- Card 1: Basic -->
          <div class="widget-card">
            <div class="widget-card-header">
              <div class="widget-card-subtitle">Category Label</div>
              <h4 class="widget-card-title">Basic Card Title</h4>
            </div>
            <div class="widget-card-content">
              <p class="widget-card-description">This is a description of the card content. It provides context and additional information about the card.</p>
            </div>
            <div class="widget-card-footer">
              <a href="#" class="widget-button">Learn More</a>
            </div>
          </div>

          <!-- Card 2: With Icon -->
          <div class="widget-card">
            <svg class="widget-card-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 6v6l4 2"></path>
            </svg>
            <div class="widget-card-header">
              <h4 class="widget-card-title">Card with Icon</h4>
            </div>
            <div class="widget-card-content">
              <p class="widget-card-description">Cards can include icons at the top to visually represent their content or function.</p>
            </div>
          </div>

          <!-- Card 3: Flat Variant -->
          <div class="widget-card widget-card-flat">
            <div class="widget-card-header">
              <div class="widget-card-subtitle">Flat Style</div>
              <h4 class="widget-card-title">Flat Card Variant</h4>
            </div>
            <div class="widget-card-content">
              <p class="widget-card-description">This card uses a flat background color instead of a border for visual variety.</p>
            </div>
            <div class="widget-card-footer">
              <a href="#" class="widget-button widget-button-primary">Action</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Elements Section -->
      <div style="margin-block-end: var(--space-6xl); padding-block-end: var(--space-4xl); border-block-end: var(--border-width-thin) solid var(--border-color);">
        <h3 class="widget-title">Form Elements</h3>
        
        <div style="max-width: 50rem;">
          <div style="margin-block-end: var(--space-lg);">
            <label class="widget-label">Text Input Label</label>
            <input type="text" class="widget-input" placeholder="Enter text here...">
          </div>
          
          <div style="margin-block-end: var(--space-lg);">
            <label class="widget-label">Email Input</label>
            <input type="email" class="widget-input" placeholder="your@email.com">
          </div>

          <div style="margin-block-end: var(--space-lg);">
            <label class="widget-label">Textarea</label>
            <textarea class="widget-input" rows="4" placeholder="Enter longer text here..."></textarea>
          </div>
        </div>
      </div>

      <!-- Grid System Section -->
      <div style="margin-block-end: var(--space-6xl); padding-block-end: var(--space-4xl); border-block-end: var(--border-width-thin) solid var(--border-color);">
        <h3 class="widget-title">Grid System</h3>
        
        <div style="margin-block-end: var(--space-3xl);">
          <h4 style="font-size: var(--font-size-xl); margin-block-end: var(--space-lg); color: var(--text-muted);">2 Column Grid</h4>
          <div class="widget-grid widget-grid-2">
            <div style="padding: var(--space-xl); background-color: var(--bg-secondary); border: var(--border-width-thin) solid var(--border-color);">
              <h5 style="margin-block-end: var(--space-sm);">Column 1</h5>
              <p style="margin: 0; color: var(--text-muted);">Grid content</p>
            </div>
            <div style="padding: var(--space-xl); background-color: var(--bg-secondary); border: var(--border-width-thin) solid var(--border-color);">
              <h5 style="margin-block-end: var(--space-sm);">Column 2</h5>
              <p style="margin: 0; color: var(--text-muted);">Grid content</p>
            </div>
          </div>
        </div>

        <div style="margin-block-end: var(--space-3xl);">
          <h4 style="font-size: var(--font-size-xl); margin-block-end: var(--space-lg); color: var(--text-muted);">4 Column Grid</h4>
          <div class="widget-grid widget-grid-4">
            <div style="padding: var(--space-lg); background-color: var(--bg-secondary); border: var(--border-width-thin) solid var(--border-color); text-align: center;">
              <p style="margin: 0; color: var(--text-muted);">Col 1</p>
            </div>
            <div style="padding: var(--space-lg); background-color: var(--bg-secondary); border: var(--border-width-thin) solid var(--border-color); text-align: center;">
              <p style="margin: 0; color: var(--text-muted);">Col 2</p>
            </div>
            <div style="padding: var(--space-lg); background-color: var(--bg-secondary); border: var(--border-width-thin) solid var(--border-color); text-align: center;">
              <p style="margin: 0; color: var(--text-muted);">Col 3</p>
            </div>
            <div style="padding: var(--space-lg); background-color: var(--bg-secondary); border: var(--border-width-thin) solid var(--border-color); text-align: center;">
              <p style="margin: 0; color: var(--text-muted);">Col 4</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Color Indicators Section -->
      <div>
        <h3 class="widget-title">Current Color Variables</h3>
        <p class="widget-description">These swatches show the current values of the theme color variables.</p>
        
        <div class="widget-grid widget-grid-3">
          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--bg-primary); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--bg-primary</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Primary Background</p>
          </div>
          
          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--bg-secondary); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--bg-secondary</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Secondary Background</p>
          </div>
          
          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--text-heading); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--text-heading</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Heading Text</p>
          </div>
          
          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--text-content); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--text-content</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Content Text</p>
          </div>
          
          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--text-muted); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--text-muted</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Muted Text</p>
          </div>
          
          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--border-color); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--border-color</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Border Color</p>
          </div>

          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--accent); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--accent</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Accent Color</p>
          </div>

          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--accent-text); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--accent-text</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Accent Text Color</p>
          </div>

          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--inverse-bg); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--inverse-bg</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Inverse Background</p>
          </div>

          <div>
            <div style="width: 100%; height: 8rem; background-color: var(--inverse-text); border: var(--border-width-thin) solid var(--border-color); margin-block-end: var(--space-sm);"></div>
            <p style="font-size: var(--font-size-sm); margin: 0;"><strong>--inverse-text</strong></p>
            <p style="font-size: var(--font-size-xs); margin: 0; color: var(--text-muted);">Inverse Text</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
