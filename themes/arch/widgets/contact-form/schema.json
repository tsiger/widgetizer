  "defaultBlocks": [
    {
      "type": "input",
      "settings": {
        "label": "Name",
        "name": "name",
        "input_type": "text",
        "placeholder": "Your name",
        "required": true
      }
    },
    {
      "type": "input",
      "settings": {
        "label": "Email",
        "name": "email",
        "input_type": "email",
        "placeholder": "your@email.com",
        "required": true
