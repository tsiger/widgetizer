        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Name"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Field name (for form submission)",
          "default": "name"
        },
        {
          "type": "select",
          "id": "input_type",
          "label": "Input type",
          "default": "text",
          "options": [
            { "value": "text", "label": "Text" },
            { "value": "email", "label": "Email" },
            { "value": "tel", "label": "Phone" },
            { "value": "url", "label": "URL" },
            { "value": "number", "label": "Number" },
            { "value": "date", "label": "Date" }
          ]
        },
        {
          "type": "text",
          "id": "placeholder",
          "label": "Placeholder"
        },
        {
          "type": "header",
          "id": "options_header",
          "label": "Options"
        },
        {
          "type": "checkbox",
          "id": "required",
          "label": "Required",
          "default": false
        }
      ]
    },
    {
      "type": "textarea",
      "displayName": "Textarea",
      "settings": [
        {
          "type": "header",
          "id": "content_header",
          "label": "Content"
