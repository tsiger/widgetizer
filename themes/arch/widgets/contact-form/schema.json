{
  "type": "contact-form",
  "displayName": "Contact Form",
  "aliases": ["lead capture", "inquiry", "message", "feedback"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Get in Touch"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "id": "form_header",
      "label": "Form"
    },
    {
      "type": "text",
      "id": "form_token",
      "label": "Form Token",
      "description": "Paste your form token from Widgetizer Publisher (starts with ft_)"
    },
    {
      "type": "text",
      "id": "form_name",
      "label": "Form Name",
      "default": "Contact Form",
      "description": "Label to identify this form in your submissions dashboard"
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "checkbox",
      "id": "show_sidebar",
      "label": "Show contact info sidebar",
      "default": true
    },
    {
      "type": "select",
      "id": "sidebar_position",
      "label": "Sidebar position",
      "default": "right",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "highlight", "label": "Highlight" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "input",
      "displayName": "Input Field",
      "settings": [
        {
          "type": "header",
          "id": "content_header",
          "label": "Content"
