        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Subject"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Field name (for form submission)",
          "default": "subject"
        },
        {
          "type": "textarea",
          "id": "options",
          "label": "Options (one per line)",
