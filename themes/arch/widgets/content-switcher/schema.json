    },
    {
      "type": "header",
      "id": "switcher_header",
      "label": "Switcher"
    },
    {
      "type": "select",
      "id": "switcher_type",
      "label": "Switcher Style",
      "default": "toggle",
      "options": [
        {
          "value": "toggle",
          "label": "Toggle (2 Options)"
        },
        {
          "value": "tabs",
          "label": "Tabs (Up to 3 Options)"
        }
      ]
    },
    {
      "type": "header",
      "id": "labels_header",
      "label": "Labels"
    },
    {
      "type": "text",
      "id": "option_1_label",
      "label": "Option 1 Label",
      "default": "Monthly"
    },
    {
      "type": "text",
      "id": "option_2_label",
      "label": "Option 2 Label",
      "default": "Yearly"
    },
    {
      "type": "text",
      "id": "option_3_label",
      "label": "Option 3 Label (Tabs only)",
      "default": "Lifetime"
    },
    {
      "type": "header",
      "id": "layout_header",
      "label": "Layout"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns per state",
      "default": 3,
      "min": 2,
      "max": 5,
      "step": 1
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "item",
      "displayName": "Content Item",
      "settings": [
        {
          "type": "header",
          "id": "content_header",
