      "default": "Yearly"
    },
    {
      "type": "text",
      "id": "option_3_label",
      "label": "Option 3 Label (Tabs only)",
      "default": "Lifetime"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns per state",
      "default": "3",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" },
        { "value": "3", "label": "3 Columns" },
        { "value": "4", "label": "4 Columns" }
      ]
    },
    {
      "type": "select",
      "id": "background",
      "label": "Background",
      "default": "primary",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "item",
      "displayName": "Content Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
