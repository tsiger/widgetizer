{
  "type": "content-switcher",
  "displayName": "Content Switcher",
  "aliases": ["tabs", "toggle content", "switch", "selector"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
