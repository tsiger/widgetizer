<section
  id="{{ widget.id }}"
  class="widget widget-content-switcher widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }}"
  {% if widget.settings.color_scheme == 'dark' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="content-switcher"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .switcher-ui-wrapper {
        display: flex;
        justify-content: center;
        margin-block-end: var(--space-2xl);
      }

      /* Toggle Style */
      & .switcher-toggle {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: var(--space-md);
        padding: 0;
      }

      & .switcher-btn {
        padding: var(--space-sm) var(--space-lg);
        font-family: inherit;
        background-color: var(--bg-primary);
        border: var(--border-width-thin) solid var(--border-color);
        cursor: pointer;
        transition:
          background-color 0.3s,
          color 0.3s,
          border-color 0.3s;
      }

      & .switcher-btn.is-active {
        background-color: var(--text-heading);
        color: var(--bg-primary);
        border-color: var(--text-heading);
      }

      & .switcher-btn:hover {
        background-color: var(--text-heading);
        color: var(--bg-primary);
        border-color: var(--text-heading);
      }

      & .switcher-btn:focus {
        outline: var(--border-width-medium) solid var(--border-color);
        outline-offset: 0.2rem;
      }

      /* Content Display */
      & .switcher-content-group {
        display: none;
        animation: switcherFadeIn 0.3s ease-out;
      }

      & .switcher-content-group.is-active {
        display: block;
      }

      @keyframes switcherFadeIn {
        from { opacity: 0; transform: translateY(1rem); }
        to { opacity: 1; transform: translateY(0); }
      }

      & .widget-card {
        text-align: center;
        align-items: center;
      }

      & .switcher-item-price {
        margin-block-end: var(--space-sm);
      }

    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'dark' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          {% if widget.index == 1 %}
            <h1 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h1>
          {% else %}
            <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
          {% endif %}
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <div class="switcher-ui-wrapper">
        <div class="switcher-toggle" role="tablist" aria-label="Content options">
          {% if widget.settings.option_1_label != blank %}
            <button
              id="switcher-tab-{{ widget.id }}-1"
              class="switcher-btn is-active block-text block-text-sm block-text-heading"
              data-target="1"
              role="tab"
              aria-selected="true"
              aria-controls="switcher-panel-{{ widget.id }}-1"
              tabindex="0"
            >
              {{ widget.settings.option_1_label }}
            </button>
          {% endif %}
          {% if widget.settings.option_2_label != blank %}
            <button
              id="switcher-tab-{{ widget.id }}-2"
              class="switcher-btn block-text block-text-sm"
              data-target="2"
              role="tab"
              aria-selected="false"
              aria-controls="switcher-panel-{{ widget.id }}-2"
              tabindex="-1"
            >
              {{ widget.settings.option_2_label }}
            </button>
          {% endif %}
          {% if widget.settings.switcher_type == 'tabs' and widget.settings.option_3_label != blank %}
            <button
              id="switcher-tab-{{ widget.id }}-3"
              class="switcher-btn block-text block-text-sm"
              data-target="3"
              role="tab"
              aria-selected="false"
              aria-controls="switcher-panel-{{ widget.id }}-3"
              tabindex="-1"
            >
              {{ widget.settings.option_3_label }}
            </button>
          {% endif %}
        </div>
      </div>

      <div class="switcher-content-reveal">
        {% if widget.settings.option_1_label != blank %}
          {% assign option_str = '1' %}
          <div
            id="switcher-panel-{{ widget.id }}-1"
            class="switcher-content-group is-active"
            data-option="1"
            role="tabpanel"
            aria-labelledby="switcher-tab-{{ widget.id }}-1"
            aria-hidden="false"
          >
            <ul
              class="widget-card-grid widget-grid"
              style="--grid-cols-desktop: {{ widget.settings.columns | default: 3 }};"
            >
            {% for blockId in widget.blocksOrder %}
              {% assign block = widget.blocks[blockId] %}
              {% if block.settings.target_option == option_str %}
                {% assign item_heading_level = 'h3' %}
                {% if widget.settings.title != blank %}
                  {% if widget.index == 1 %}
                    {% assign item_heading_level = 'h2' %}
                  {% endif %}
                {% else %}
                  {% if widget.index == 1 and forloop.first %}
                    {% assign item_heading_level = 'h1' %}
                  {% else %}
                    {% assign item_heading_level = 'h2' %}
                  {% endif %}
                {% endif %}
                <li class="widget-card" data-block-id="{{ blockId }}">
                  {% if block.settings.image != blank %}
                    {{ block.settings.image | image: 'medium', 'widget-card-image' }}
                  {% endif %}

                  <div class="widget-card-content">
                    {% if block.settings.title != blank %}
                      <{{ item_heading_level }} class="widget-card-title" data-setting="title">{{ block.settings.title }}</{{ item_heading_level }}>
                    {% endif %}

                    {% if block.settings.price != blank %}
                      <div class="switcher-item-price block-text block-text-3xl block-text-heading" data-setting="price">{{ block.settings.price }}</div>
                    {% endif %}

                    {% if block.settings.text != blank %}
                      <p class="widget-card-description" data-setting="text">{{ block.settings.text }}</p>
                    {% endif %}
                  </div>

                  {% if block.settings.link.href != blank %}
                    <div class="widget-card-footer">
                      <a href="{{ block.settings.link.href }}" class="widget-button widget-button-secondary">
                        {{ block.settings.link.text | default: 'Learn More' }}
                      </a>
                    </div>
                  {% endif %}
                </li>
              {% endif %}
            {% endfor %}
            </ul>
          </div>
        {% endif %}

        {% if widget.settings.option_2_label != blank %}
          {% assign option_str = '2' %}
          <div
            id="switcher-panel-{{ widget.id }}-2"
            class="switcher-content-group"
            data-option="2"
            role="tabpanel"
            aria-labelledby="switcher-tab-{{ widget.id }}-2"
            aria-hidden="true"
          >
            <ul
              class="widget-card-grid widget-grid"
              style="--grid-cols-desktop: {{ widget.settings.columns | default: 3 }};"
            >
            {% for blockId in widget.blocksOrder %}
              {% assign block = widget.blocks[blockId] %}
              {% if block.settings.target_option == option_str %}
                {% assign item_heading_level = 'h3' %}
                {% if widget.settings.title != blank %}
                  {% if widget.index == 1 %}
                    {% assign item_heading_level = 'h2' %}
                  {% endif %}
                {% else %}
                  {% if widget.index == 1 and forloop.first %}
                    {% assign item_heading_level = 'h1' %}
                  {% else %}
                    {% assign item_heading_level = 'h2' %}
                  {% endif %}
                {% endif %}
                <li class="widget-card" data-block-id="{{ blockId }}">
                  {% if block.settings.image != blank %}
                    {{ block.settings.image | image: 'medium', 'widget-card-image' }}
                  {% endif %}

                  <div class="widget-card-content">
                    {% if block.settings.title != blank %}
                      <{{ item_heading_level }} class="widget-card-title" data-setting="title">{{ block.settings.title }}</{{ item_heading_level }}>
                    {% endif %}

                    {% if block.settings.price != blank %}
                      <div class="switcher-item-price block-text block-text-3xl block-text-heading" data-setting="price">{{ block.settings.price }}</div>
                    {% endif %}

                    {% if block.settings.text != blank %}
                      <p class="widget-card-description" data-setting="text">{{ block.settings.text }}</p>
                    {% endif %}
                  </div>

                  {% if block.settings.link.href != blank %}
                    <div class="widget-card-footer">
                      <a href="{{ block.settings.link.href }}" class="widget-button widget-button-secondary">
                        {{ block.settings.link.text | default: 'Learn More' }}
                      </a>
                    </div>
                  {% endif %}
                </li>
              {% endif %}
            {% endfor %}
            </ul>
          </div>
        {% endif %}

        {% if widget.settings.switcher_type == 'tabs' and widget.settings.option_3_label != blank %}
          {% assign option_str = '3' %}
          <div
            id="switcher-panel-{{ widget.id }}-3"
            class="switcher-content-group"
            data-option="3"
            role="tabpanel"
            aria-labelledby="switcher-tab-{{ widget.id }}-3"
            aria-hidden="true"
          >
            <ul
              class="widget-card-grid widget-grid"
              style="--grid-cols-desktop: {{ widget.settings.columns | default: 3 }};"
            >
            {% for blockId in widget.blocksOrder %}
              {% assign block = widget.blocks[blockId] %}
              {% if block.settings.target_option == option_str %}
                {% assign item_heading_level = 'h3' %}
                {% if widget.settings.title != blank %}
                  {% if widget.index == 1 %}
                    {% assign item_heading_level = 'h2' %}
                  {% endif %}
                {% else %}
                  {% if widget.index == 1 and forloop.first %}
                    {% assign item_heading_level = 'h1' %}
                  {% else %}
                    {% assign item_heading_level = 'h2' %}
                  {% endif %}
                {% endif %}
                <li class="widget-card" data-block-id="{{ blockId }}">
                  {% if block.settings.image != blank %}
                    {{ block.settings.image | image: 'medium', 'widget-card-image' }}
                  {% endif %}

                  <div class="widget-card-content">
                    {% if block.settings.title != blank %}
                      <{{ item_heading_level }} class="widget-card-title" data-setting="title">{{ block.settings.title }}</{{ item_heading_level }}>
                    {% endif %}

                    {% if block.settings.price != blank %}
                      <div class="switcher-item-price block-text block-text-3xl block-text-heading" data-setting="price">{{ block.settings.price }}</div>
                    {% endif %}

                    {% if block.settings.text != blank %}
                      <p class="widget-card-description" data-setting="text">{{ block.settings.text }}</p>
                    {% endif %}
                  </div>

                  {% if block.settings.link.href != blank %}
                    <div class="widget-card-footer">
                      <a href="{{ block.settings.link.href }}" class="widget-button widget-button-secondary">
                        {{ block.settings.link.text | default: 'Learn More' }}
                      </a>
                    </div>
                  {% endif %}
                </li>
              {% endif %}
            {% endfor %}
            </ul>
          </div>
        {% endif %}
        </div>
    </div>
  </div>

  <script>
    (function () {
      const widget = document.getElementById('{{ widget.id }}');
      if (!widget || widget.dataset.initialized) return;
      widget.dataset.initialized = 'true';

      const buttons = Array.from(widget.querySelectorAll('.switcher-btn'));
      const groups = widget.querySelectorAll('.switcher-content-group');

      const activateTab = (button) => {
        const target = button.getAttribute('data-target');

        buttons.forEach((b) => {
          b.classList.remove('is-active');
          b.classList.remove('block-text-heading');
          b.setAttribute('aria-selected', 'false');
          b.setAttribute('tabindex', '-1');
        });

        button.classList.add('is-active');
        button.classList.add('block-text-heading');
        button.setAttribute('aria-selected', 'true');
        button.setAttribute('tabindex', '0');

        groups.forEach((group) => {
          const isActive = group.getAttribute('data-option') === target;
          group.classList.toggle('is-active', isActive);
          group.setAttribute('aria-hidden', isActive ? 'false' : 'true');
        });
      };

      buttons.forEach((btn, index) => {
        btn.addEventListener('click', function () {
          activateTab(this);
        });

        btn.addEventListener('keydown', (event) => {
          const currentIndex = buttons.indexOf(btn);
          let nextIndex = null;

          switch (event.key) {
            case 'ArrowRight':
              nextIndex = (currentIndex + 1) % buttons.length;
              break;
            case 'ArrowLeft':
              nextIndex = (currentIndex - 1 + buttons.length) % buttons.length;
              break;
            case 'Home':
              nextIndex = 0;
              break;
            case 'End':
              nextIndex = buttons.length - 1;
              break;
            default:
              return;
          }

          event.preventDefault();
          const nextButton = buttons[nextIndex];
          nextButton.focus();
          activateTab(nextButton);
        });
      });
    })();
  </script>
</section>
