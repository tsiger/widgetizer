<section
  id="{{ widget.id }}"
  class="widget widget-content-switcher {% if widget.settings.background_color != blank %}has-bg-color{% endif %}"
  {% if widget.settings.background_color != blank %}
    style="--widget-bg-color: {{ widget.settings.background_color }};"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="content-switcher"
>
  <style>
    #{{ widget.id }} {
      & .switcher-ui-wrapper {
        display: flex;
        justify-content: center;
        margin-block-end: var(--space-2xl);
      }

      /* Toggle Style */
      & .switcher-toggle {
        display: flex;
        background: var(--bg-secondary);
        padding: var(--space-xs);
        border-radius: var(--border-radius-full);
        position: relative;
        gap: var(--space-xs);
        border: var(--border-width-thin) solid var(--border-light);
      }

      & .switcher-btn {
        padding: var(--space-sm) var(--space-xl);
        border-radius: var(--border-radius-full);
        border: none;
        background: transparent;
        color: var(--text-muted);
        font-weight: var(--font-weight-medium);
        cursor: pointer;
        transition: all var(--transition-speed-normal);
        z-index: 2;
        font-size: var(--font-size-sm);

        &:hover {
          color: var(--text-primary);
        }
      }

      & .switcher-btn.is-active {
        background: var(--bg-primary);
        color: var(--text-primary);
        border: var(--border-width-thin) solid var(--border-light);
      }

      /* Content Display */
      & .switcher-content-group {
        display: none;
        grid-template-columns: repeat(1, 1fr);
        gap: var(--space-lg);
        animation: switcherFadeIn 0.3s ease-out;
      }

      & .switcher-content-group.is-active {
        display: grid;
      }

      @keyframes switcherFadeIn {
        from { opacity: 0; transform: translateY(1rem); }
        to { opacity: 1; transform: translateY(0); }
      }

      & .switcher-item {
        background: var(--bg-primary);
        border: var(--border-width-thin) solid var(--border-light);
        border-radius: var(--border-radius-lg);
        padding: var(--space-xl);
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
        text-align: center;
        align-items: center;

        &:hover {
          border-color: var(--border-dark);
        }
      }

      & .switcher-item-price {
        font-size: var(--font-size-3xl);
        font-weight: var(--font-weight-bold);
        color: var(--text-primary);
      }

      @media (min-width: 990px) {
        & .switcher-content-group {
          grid-template-columns: repeat({{ widget.settings.columns | default: 3 }}, 1fr);
        }
      }
    }
  </style>

  <div class="widget-container">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <div class="switcher-ui-wrapper">
        <div class="switcher-toggle" role="tablist">
          {% if widget.settings.option_1_label != blank %}
            <button class="switcher-btn is-active" data-target="1" role="tab" aria-selected="true">
              {{ widget.settings.option_1_label }}
            </button>
          {% endif %}
          {% if widget.settings.option_2_label != blank %}
            <button class="switcher-btn" data-target="2" role="tab" aria-selected="false">
              {{ widget.settings.option_2_label }}
            </button>
          {% endif %}
          {% if widget.settings.switcher_type == 'tabs' and widget.settings.option_3_label != blank %}
            <button class="switcher-btn" data-target="3" role="tab" aria-selected="false">
              {{ widget.settings.option_3_label }}
            </button>
          {% endif %}
        </div>
      </div>

      <div class="switcher-content-reveal">
        {% for i in (1..3) %}
          {% assign option_str = i | append: '' %}
          <div class="switcher-content-group {% if i == 1 %}is-active{% endif %}" data-option="{{ i }}" role="tabpanel">
            {% for blockId in widget.blocksOrder %}
              {% assign block = widget.blocks[blockId] %}
              {% if block.settings.target_option == option_str %}
                <div class="switcher-item" data-block-id="{{ blockId }}">
                  {% if block.settings.image != blank %}
                    {{ block.settings.image | image: 'medium', 'switcher-item-image' }}
                  {% endif %}

                  {% if block.settings.title != blank %}
                    <h3 class="widget-title" data-setting="title">{{ block.settings.title }}</h3>
                  {% endif %}

                  {% if block.settings.price != blank %}
                    <div class="switcher-item-price" data-setting="price">{{ block.settings.price }}</div>
                  {% endif %}

                  {% if block.settings.text != blank %}
                    <p class="widget-text" data-setting="text">{{ block.settings.text }}</p>
                  {% endif %}

                  {% if block.settings.link.href != blank %}
                    <a href="{{ block.settings.link.href }}" class="widget-button widget-button-primary">
                      {{ block.settings.link.text | default: 'Learn More' }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <script>
    (function () {
      const allWidgets = document.querySelectorAll('.widget-content-switcher');

      allWidgets.forEach((widget) => {
        if (widget.dataset.initialized) return;
        widget.dataset.initialized = 'true';

        const buttons = widget.querySelectorAll('.switcher-btn');
        const groups = widget.querySelectorAll('.switcher-content-group');

        buttons.forEach((btn) => {
          btn.addEventListener('click', function () {
            const target = this.getAttribute('data-target');

            // Update buttons
            buttons.forEach((b) => {
              b.classList.remove('is-active');
              b.setAttribute('aria-selected', 'false');
            });
            this.classList.add('is-active');
            this.setAttribute('aria-selected', 'true');

            // Update groups
            groups.forEach((group) => {
              if (group.getAttribute('data-option') === target) {
                group.classList.add('is-active');
              } else {
                group.classList.remove('is-active');
              }
            });
          });
        });
      });
    })();
  </script>
</section>
