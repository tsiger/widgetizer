{
  "type": "comparison-table",
  "displayName": "Comparison Table",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Compare Our Plans"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "feature_column_label",
      "label": "Feature column label",
      "default": "Features"
    },
    {
      "type": "link",
      "id": "cta_link",
      "label": "Footer CTA button"
    },
    {
      "type": "select",
      "id": "background",
      "label": "Background",
      "default": "primary",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "column",
      "displayName": "Column",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Column name",
          "default": "Our Product"
        },
        {
          "type": "checkbox",
          "id": "featured",
          "label": "Featured (highlighted)",
          "default": false
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge text (optional)"
        }
      ]
    },
    {
      "type": "feature",
      "displayName": "Feature Row",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Feature name",
          "default": "Feature Name"
        },
        {
          "type": "textarea",
          "id": "values",
          "label": "Values for each column (one per line: ✓, ✗, or custom text)",
          "default": "✓\n✓\n✗"
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
      "type": "column",
      "settings": {
        "name": "Free",
        "featured": false
      }
    },
    {
      "type": "column",
      "settings": {
        "name": "Pro",
        "featured": true,
        "badge": "Popular"
      }
    },
    {
      "type": "column",
      "settings": {
        "name": "Enterprise",
        "featured": false
      }
    },
    {
      "type": "feature",
      "settings": {
        "name": "Basic Features",
        "values": "✓\n✓\n✓"
      }
    },
    {
      "type": "feature",
      "settings": {
        "name": "Advanced Analytics",
        "values": "✗\n✓\n✓"
      }
    },
    {
      "type": "feature",
      "settings": {
        "name": "Priority Support",
        "values": "✗\n✗\n✓"
      }
    }
  ]
}
