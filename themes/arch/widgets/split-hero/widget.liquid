<section
  id="{{ widget.id }}"
  class="widget widget-split-hero widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }} {% if widget.settings.image_position == 'right' %}layout-image-right{% endif %}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="split-hero"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      /* Full viewport width - break out of container constraints */
      margin-block: 0;
      padding-inline: 0;
      position: relative;
      width: 100%;
      margin-inline: 0;
      max-width: none;

      & .widget-container {
        max-width: none;
        margin-inline: 0;
      }

      & .split-hero-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 50rem; /* Minimum height for hero section */
        width: 100%;
        margin: 0;
        padding: 0;
      }

      & .split-hero-image {
        width: 100%;
        min-height: 30rem;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        margin: 0;
        padding: 0;
      }

      & .split-hero-overlay {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
      }

      & .split-hero-content {
        width: 100%;
        padding: var(--space-xl) var(--space-md);
      }


      @media (min-width: 990px) {
        & .split-hero-wrapper {
          flex-direction: row;
          min-height: 60rem;
        }

        & .split-hero-image {
          width: 50%;
          min-height: 60rem;
          flex-shrink: 0;
        }

        & .split-hero-content {
          width: 50%;
          padding: var(--space-4xl) var(--space-3xl);
          display: flex;
          align-items: center;
          flex-shrink: 0;
        }

        & .split-hero-content .widget-content {
          max-width: var(--content-width-md);
          width: 100%;
        }

        /* Image right variant */
        &.layout-image-right .split-hero-wrapper {
          flex-direction: row-reverse;
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    <div class="split-hero-wrapper">
    <!-- Background Image Section (50%) -->
    {% if widget.settings.image != blank %}
      {% assign image_path = widget.settings.image | image: 'path', 'large' %}
      <div class="split-hero-image" style="background-image: url('{{ image_path }}');">
        {% if widget.settings.overlay_color != blank %}
          <div class="split-hero-overlay" style="background-color: {{ widget.settings.overlay_color }};"></div>
        {% endif %}
      </div>
    {% else %}
      <div class="split-hero-image" style="background-image: url({% placeholder_image 'landscape', 'url' %});">
        {% if widget.settings.overlay_color != blank %}
          <div class="split-hero-overlay" style="background-color: {{ widget.settings.overlay_color }};"></div>
        {% endif %}
      </div>
    {% endif %}

    <!-- Content Section (50%) -->
    <div class="split-hero-content">
      <div class="widget-content content-flow widget-content-align-start">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          {% case block.type %}
            {% when 'heading' %}
              {% assign size_class = 'block-text-' | append: block.settings.size %}
              {% if widget.index == 1 %}
                <h1 class="widget-title block-text {{ size_class }} block-text-heading-weight block-text-heading" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </h1>
              {% else %}
                <h2 class="widget-title block-text {{ size_class }} block-text-heading-weight block-text-heading" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </h2>
              {% endif %}
            {% when 'text' %}
              {% assign size_class = 'block-text-' | append: block.settings.size %}
              {% assign style_class = '' %}
              {% if block.settings.uppercase %}{% assign style_class = style_class | append: ' block-text-uppercase' %}{% endif %}
              {% if block.settings.muted %}{% assign style_class = style_class | append: ' block-text-muted' %}{% endif %}
              <p class="widget-description block-text {{ size_class }}{{ style_class }}" data-block-id="{{ blockId }}" data-setting="text">
                {{ block.settings.text }}
              </p>
            {% when 'features' %}
              {% if block.settings.features != blank %}
                <ul class="features-list" data-block-id="{{ blockId }}">
                  {% assign normalized_features = block.settings.features | replace: '\r\n', '\n' %}
                  {% assign features_list = normalized_features | split: '\n' %}
                  {% for feature in features_list %}
                    {% assign trimmed_feature = feature | strip %}
                    {% if trimmed_feature != blank %}
                        {% assign feature_text = trimmed_feature %}
                        {% assign icon_name = '' %}
                        {% assign first_char = trimmed_feature | slice: 0, 1 %}
                        {% if first_char == '+' %}
                          {% assign icon_name = 'check' %}
                          {% assign feature_text = trimmed_feature | remove_first: '+' | strip %}
                        {% elsif first_char == '-' %}
                          {% assign icon_name = 'x' %}
                          {% assign feature_text = trimmed_feature | remove_first: '-' | strip %}
                        {% endif %}
                      <li class="feature-item block-text">
                        {% if icon_name != blank %}
                          <span class="feature-icon">
                            {% render 'icon', icon: icon_name, class: 'feature-icon-svg' %}
                          </span>
                        {% endif %}
                        <span>{{ feature_text }}</span>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              {% endif %}
            {% when 'button' %}
              {% if block.settings.link.text != blank or block.settings.link_2.text != blank %}
                <div class="widget-actions" data-block-id="{{ blockId }}">
                  {% if block.settings.link.text != blank %}
                    {% if block.settings.size != 'small' and block.settings.size != blank %}
                      {% assign size_class = 'widget-button-' | append: block.settings.size %}
                    {% else %}
                      {% assign size_class = '' %}
                    {% endif %}
                    <a
                      href="{{ block.settings.link.href }}"
                      class="widget-button {{ size_class }} {% if block.settings.style == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                      data-setting="link"
                      {% if block.settings.link.target == '_blank' %}
                        target="_blank" rel="noopener"
                      {% endif %}
                    >
                      {{ block.settings.link.text }}
                    </a>
                  {% endif %}
                  {% if block.settings.link_2.text != blank %}
                    {% if block.settings.size != 'small' and block.settings.size != blank %}
                      {% assign size_class = 'widget-button-' | append: block.settings.size %}
                    {% else %}
                      {% assign size_class = '' %}
                    {% endif %}
                    <a
                      href="{{ block.settings.link_2.href }}"
                      class="widget-button {{ size_class }} {% if block.settings.style_2 == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                      data-setting="link_2"
                      {% if block.settings.link_2.target == '_blank' %}
                        target="_blank" rel="noopener"
                      {% endif %}
                    >
                      {{ block.settings.link_2.text }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
    </div>
  </div>
</section>
