<section
  id="{{ widget.id }}"
  class="widget widget-type-newsletter widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="newsletter"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .newsletter-form {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
      }

      & .newsletter-input-group {
        display: flex;
        flex-direction: column;
        gap: var(--space-sm);
      }

      & .newsletter-success {
        display: none;
        text-align: center;
        padding: var(--space-lg);
      }

      &.is-submitted .newsletter-form {
        display: none;
      }

      &.is-submitted .newsletter-success {
        display: block;
      }

      @media (min-width: 750px) {
        & .newsletter-input-group {
          flex-direction: row;
          gap: var(--space-md);
        }

        & .widget-button {
          flex-shrink: 0;
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          {% if widget.index == 1 %}
            <h1 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h1>
          {% else %}
            <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
          {% endif %}
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content widget-content-sm">
      <form class="newsletter-form" action="{{ widget.settings.form_action }}" method="POST">
        <div class="newsletter-input-group">
          <label for="{{ widget.id }}-email" class="visually-hidden">Email address</label>
          <input
            type="email"
            id="{{ widget.id }}-email"
            name="email"
            class="widget-input"
            placeholder="{{ widget.settings.placeholder }}"
            required
            aria-required="true"
          >
          <button type="submit" class="widget-button widget-button-primary" data-setting="button_text">
            {{ widget.settings.button_text }}
          </button>
        </div>
      </form>

      <div class="newsletter-success" data-setting="success_message" role="status" aria-live="polite">
        <p class="widget-text block-text block-text-heading">{{ widget.settings.success_message }}</p>
      </div>
    </div>
  </div>

  <script>
    (function () {
      const widget = document.getElementById('{{ widget.id }}');
      if (!widget || widget.dataset.initialized) return;
      widget.dataset.initialized = 'true';

      const form = widget.querySelector('.newsletter-form');

      if (form) {
        form.addEventListener('submit', function (e) {
          e.preventDefault();
          widget.classList.add('is-submitted');
        });
      }
    })();
  </script>
</section>
