<section
  id="{{ widget.id }}"
  class="widget widget-feature-benefit-list"
  data-widget-id="{{ widget.id }}"
  data-widget-type="feature-benefit-list"
>
  <style>
    #{{ widget.id }} {
      & .feature-list {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }

      & .widget-card-header {
        margin-block-end: var(--space-md);
      }

      & .widget-card-subtitle {
        font-size: var(--font-size-xs);
        font-weight: var(--font-weight-semibold);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        margin-block-end: var(--space-xs);
      }

      & .widget-card-title {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-bold);
        margin: 0;
      }

      & .widget-card-content {
        color: var(--text-body);
        line-height: var(--line-height-relaxed);
      }

      @media (min-width: 750px) {
        & .feature-list {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 990px) {
        & .feature-list {
          grid-template-columns: repeat(4, 1fr);
        }
      }
    }
  </style>

  <div class="widget-container">
    {% if widget.settings.title != blank or widget.settings.description != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <div class="feature-list">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <div class="widget-card" data-block-id="{{ blockId }}">
            <div class="widget-card-header">
              {% if block.settings.subtitle != blank %}
                <span class="widget-card-subtitle" data-setting="subtitle">{{ block.settings.subtitle }}</span>
              {% endif %}
              {% if block.settings.title != blank %}
                <h3 class="widget-card-title" data-setting="title">{{ block.settings.title }}</h3>
              {% endif %}
            </div>
            {% if block.settings.description != blank %}
              <div class="widget-card-content">
                <p data-setting="description">{{ block.settings.description }}</p>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
