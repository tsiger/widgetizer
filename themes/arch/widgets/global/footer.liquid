<footer id="{{ widget.id }}" class="widget-footer" data-widget-id="{{ widget.id }}" data-widget-type="footer">
  <style>
    #{{ widget.id }} {
      padding-block: var(--space-3xl);
      padding-inline: var(--space-xl);
      border-block-start: var(--border-width-thin) solid var(--border-light);
      background-color: var(--bg-secondary);

      & .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: var(--space-lg);
      }

      & .footer-copyright {
        color: var(--text-muted);
        font-size: var(--font-size-sm);
      }

      & .social-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: var(--space-lg);
      }

      & .social-item {
        display: inline-block;

        & a {
          text-decoration: none;
          color: var(--text-body);
          font-weight: var(--font-weight-semibold);
          padding: var(--space-xs);
          display: block;
          transition: color 0.2s;

          &.hover {
            color: var(--text-primary);
          }
        }
      }
    }
  </style>

  <div class="footer-content">
    <p class="footer-copyright">&copy; 2025 Widgetizer. All rights reserved.</p>
    <ul class="social-list">
      <li class="social-item">
        <a href="https://facebook.com" aria-label="Facebook">FB</a>
      </li>
      <li class="social-item">
        <a href="https://twitter.com" aria-label="Twitter">TW</a>
      </li>
      <li class="social-item">
        <a href="https://instagram.com" aria-label="Instagram">IG</a>
      </li>
      <li class="social-item">
        <a href="https://linkedin.com" aria-label="LinkedIn">LI</a>
      </li>
    </ul>
  </div>

  <script type="application/json" data-widget-schema>
    {
      "type": "footer",
      "displayName": "Footer",
      "settings": []
    }
  </script>
</footer>
