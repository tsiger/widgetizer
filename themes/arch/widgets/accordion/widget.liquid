<section
  id="{{ widget.id }}"
  class="widget widget-accordion widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }} {% if widget.settings.style == 'connected' %}accordion-bordered{% endif %}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  {% if widget.settings.allow_multiple %}
    data-multi-open="true"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="accordion"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .accordion-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
      }

      & .accordion-item {
        background-color: var(--bg-primary);
        border: var(--border-width-thin) solid var(--border-color);
        overflow: hidden;
      }

      & .accordion-trigger {
        width: 100%;
        padding: var(--space-md) var(--space-lg);
        text-align: start;
        background: transparent;
        border: none;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--space-md);
        color: var(--text-heading);
        transition: background-color 0.2s;
        font-family: inherit;

        &:focus-visible {
          outline-offset: -0.2rem;
        }
      }

      & .accordion-question {
        flex: 1;
        text-align: start;
      }

      & .accordion-icon {
        width: 2.4rem;
        height: 2.4rem;
        flex-shrink: 0;
        transition: transform 0.3s ease;

        & svg {
          width: 100%;
          height: 100%;
        }
      }

      & .accordion-trigger[aria-expanded="true"] .accordion-icon {
        transform: rotate(180deg);
      }

      /* Grid-based collapse animation */
      & .accordion-content {
        display: grid;
        grid-template-rows: 0fr;
        transition: grid-template-rows 0.3s ease-out;
      }

      & .accordion-content[aria-hidden="false"] {
        grid-template-rows: 1fr;
      }

      /* Inner wrapper handles overflow, padding stays constant */
      & .accordion-inner {
        min-height: 0;
        overflow: hidden;
      }

      /* Answer has constant padding, opacity transitions */
      & .accordion-answer {
        padding: 0 var(--space-lg) var(--space-lg) var(--space-lg);
        margin: 0;
        opacity: 0;
        transform: translateY(-0.8rem);
        transition:
          opacity 0.25s ease-out,
          transform 0.25s ease-out;
      }

      & .accordion-content[aria-hidden="false"] .accordion-answer {
        opacity: 1;
        transform: translateY(0);
      }

      @media (min-width: 750px) {
        & .accordion-trigger {
          padding: var(--space-lg);
        }
      }

      /* Variation: Connected/Bordered */
      &.accordion-bordered {
        & .accordion-list {
          gap: 0;
          border: var(--border-width-thin) solid var(--border-color);
          overflow: hidden;
        }

        & .accordion-item {
          border: none;
          border-radius: 0;
          border-block-end: var(--border-width-thin) solid var(--border-color);

          &:last-child {
            border-block-end: none;
          }
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% assign header_delay = 0 %}
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
          {% assign header_delay = header_delay | plus: 1 %}
        {% endif %}
        {% if widget.settings.title != blank %}
          {% if widget.index == 1 %}
            <h1 class="widget-headline reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="title">{{ widget.settings.title }}</h1>
          {% else %}
            <h2 class="widget-headline reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="title">{{ widget.settings.title }}</h2>
          {% endif %}
          {% assign header_delay = header_delay | plus: 1 %}
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content widget-content-md">
      <ul class="accordion-list">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <li class="accordion-item reveal reveal-up" style="--reveal-delay: {{ forloop.index0 }}" data-block-id="{{ blockId }}">
            <button
              class="accordion-trigger"
              aria-expanded="false"
              aria-controls="accordion-content-{{ widget.id }}-{{ blockId }}"
              id="accordion-trigger-{{ widget.id }}-{{ blockId }}"
            >
              <span class="accordion-question block-text block-text-lg block-text-body-bold" data-setting="question">{{ block.settings.question }}</span>
              <span class="accordion-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M6 9l6 6 6-6" />
                </svg>
              </span>
            </button>
            <div
              class="accordion-content"
              id="accordion-content-{{ widget.id }}-{{ blockId }}"
              role="region"
              aria-labelledby="accordion-trigger-{{ widget.id }}-{{ blockId }}"
              aria-hidden="true"
            >
              <div class="accordion-inner">
                <p class="accordion-answer block-text" data-setting="answer">{{ block.settings.answer }}</p>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <script>
    (function () {
      const widget = document.getElementById('{{ widget.id }}');
      if (!widget || widget.dataset.initialized) return;
      widget.dataset.initialized = 'true';

      const isMultiOpen = widget.dataset.multiOpen === 'true';
      const triggers = widget.querySelectorAll('.accordion-trigger');

      triggers.forEach(function (trigger) {
        trigger.addEventListener('click', function () {
          const isExpanded = this.getAttribute('aria-expanded') === 'true';
          const content = this.nextElementSibling;

          if (!isMultiOpen) {
            // Close other items if not multi-open
            widget.querySelectorAll('.accordion-trigger').forEach(function (t) {
              if (t !== trigger) {
                t.setAttribute('aria-expanded', 'false');
                t.nextElementSibling.setAttribute('aria-hidden', 'true');
              }
            });
          }

          // Toggle current item
          this.setAttribute('aria-expanded', !isExpanded);
          content.setAttribute('aria-hidden', isExpanded);
        });
      });
    })();
  </script>
</section>
