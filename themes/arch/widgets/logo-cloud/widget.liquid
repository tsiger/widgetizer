<section
  id="{{ widget.id }}"
  class="widget widget-type-logo-cloud widget-{{ widget.id }}"
  {% if widget.settings.background == 'secondary' %}
    style="--widget-bg-color: var(--bg-secondary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="logo-cloud"
>
  <style>
    .widget-{{ widget.id }} {
      & .logo-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-lg);
        list-style: none;
        padding: 0;
        margin: 0;
        align-items: center;
        justify-items: center;
      }

      & .logo-item {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-lg);
        background-color: var(--bg-primary);
        border: var(--border-width-thin) solid var(--border-color);
      }

      & .logo-image {
        max-width: 12rem;
        height: auto;
        max-height: 4.8rem;
        width: auto;
        filter: grayscale(100%);
        opacity: 0.6;
        transition: opacity 0.3s, filter 0.3s;
        display: block;

        &:hover {
          opacity: 1;
          filter: grayscale(0%);
        }
      }

      & .logo-link {
        display: block;
      }

      @media (min-width: 750px) {
        & .logo-grid {
          grid-template-columns: repeat(3, 1fr);
        }

        & .logo-image {
          max-width: 14rem;
          max-height: 5.6rem;
        }
      }

      @media (min-width: 990px) {
        & .logo-grid {
          grid-template-columns: repeat(6, 1fr);
        }

        & .logo-image {
          max-width: 16rem;
          max-height: 6.4rem;
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.background == 'secondary' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <ul class="logo-grid">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <li class="logo-item" data-block-id="{{ blockId }}">
            {% if block.settings.link.href != blank %}
              <a
                href="{{ block.settings.link.href }}"
                class="logo-link"
                {% if block.settings.link.target == '_blank' %}
                  target="_blank" rel="noopener"
                {% endif %}
              >
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image: 'small', 'logo-image', block.settings.name }}
                {% else %}
                  {% placeholder_image 'landscape', { "class": "logo-image" } %}
                {% endif %}
              </a>
            {% else %}
              {% if block.settings.image != blank %}
                {{ block.settings.image | image: 'small', 'logo-image', block.settings.name }}
              {% else %}
                {% placeholder_image 'landscape', { "class": "logo-image", "alt": "Logo" } %}
              {% endif %}
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
