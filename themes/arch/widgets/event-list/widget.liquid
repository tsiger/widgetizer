<section
  id="{{ widget.id }}"
  class="widget widget-event-list"
  data-widget-id="{{ widget.id }}"
  data-widget-type="event-list"
>
  <style>
    #{{ widget.id }} {
      & .event-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: var(--space-xl);
      }

      & .widget-card {
        display: flex;
        flex-direction: column;
        gap: var(--space-lg);
      }

      & .event-date {
        flex-shrink: 0;
        width: 8rem;
        height: 8rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: var(--border-width-medium) solid var(--border-darker);
        text-align: center;
        align-self: flex-start;
      }

      & .event-date-day {
        font-size: var(--font-size-4xl);
        font-weight: var(--font-weight-bold);
        line-height: 1;
      }

      & .event-date-month {
        font-size: var(--font-size-sm);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        margin-block-start: var(--space-xs);
      }

      @media (min-width: 750px) {
        & .widget-card {
          flex-direction: row;
          gap: var(--space-2xl);
          padding: var(--space-2xl);
        }

        & .event-date {
          width: 10rem;
          height: 10rem;
        }

        & .event-date-day {
          font-size: var(--font-size-5xl);
        }
      }
    }
  </style>

  <div class="widget-container">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          <h2 class="widget-title">{{ widget.settings.title }}</h2>
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <ul class="event-list">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <li class="widget-card" data-block-id="{{ blockId }}" {{ block.shopify_attributes }}>
            <div class="event-date">
              <span class="event-date-day">{{ block.settings.day }}</span>
              <span class="event-date-month">{{ block.settings.month }}</span>
            </div>
            <div class="widget-card-content">
              {% if block.settings.title != blank %}
                <h3 class="widget-card-title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.location != blank %}
                <p class="widget-card-subtitle">{{ block.settings.location }}</p>
              {% endif %}
              {% if block.settings.description != blank %}
                <p class="widget-card-description">{{ block.settings.description }}</p>
              {% endif %}
              {% if block.settings.button_link.text != blank %}
                <div class="widget-card-footer">
                  <a href="{{ block.settings.button_link.href }}" class="widget-button" {% if block.settings.button_link.target == '_blank' %}target="_blank" rel="noopener"{% endif %}>
                    {{ block.settings.button_link.text }}
                  </a>
                </div>
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
