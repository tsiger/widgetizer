<section
  id="{{ widget.id }}"
  class="widget widget-image-callout widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }} {% if widget.settings.image_position == 'right' %}layout-image-right{% endif %}"
  {% if widget.settings.color_scheme == 'dark' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="image-callout"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      overflow: hidden;

      & .callout-wrapper {
        position: relative;
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }

      & .callout-image-wrapper {
        position: relative;
        width: 100%;
        height: 40rem;
        overflow: hidden;
      }

      & .callout-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        border: var(--border-width-thin) solid var(--border-color);
      }

      & .callout-content {
        background-color: var(--bg-primary);
        padding: var(--space-xl);
        border: var(--border-width-thin) solid var(--border-color);
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
      }

      & .widget-title {
        margin-block-end: var(--space-lg);
      }

      & .widget-description {
        margin-block-end: var(--space-lg);

        &:last-child {
          margin-block-end: 0;
        }
      }

      & .callout-features {
        list-style: none;
        padding: 0;
        margin: 0;
        margin-block-end: var(--space-lg);

        &:last-child {
          margin-block-end: 0;
        }
      }

      & .callout-feature {
        display: flex;
        align-items: flex-start;
        gap: var(--space-sm);
        padding-block: var(--space-xs);
      }

      & .callout-feature-icon {
        color: var(--text-heading);
        flex-shrink: 0;
      }

      & .widget-actions {
        justify-content: flex-start;
        margin-block-start: var(--space-xl);
      }

      @media (min-width: 750px) {
        & .callout-image-wrapper {
          height: 50rem;
        }

        & .callout-content {
          padding: var(--space-3xl);
        }
      }

      @media (min-width: 990px) {
        & .callout-wrapper {
          grid-template-columns: repeat(12, 1fr);
          align-items: center;
          gap: 0;
        }

        & .callout-image-wrapper {
          grid-column: 1 / 8;
          grid-row: 1;
          height: 60rem;
        }

        & .callout-content {
          grid-column: 6 / 13;
          grid-row: 1;
          padding: var(--space-4xl);
          margin-inline-start: -4rem;
        }
      }

      @media (min-width: 1200px) {
        & .callout-content {
          padding: var(--space-5xl);
          margin-inline-start: -6rem;
        }
      }

      /* Variant: Image Right */
      &.layout-image-right {
        @media (min-width: 990px) {
          & .callout-image-wrapper {
            grid-column: 6 / 13;
            grid-row: 1;
          }

          & .callout-content {
            grid-column: 1 / 9;
            grid-row: 1;
            margin-inline-start: 0;
            margin-inline-end: -4rem;
          }
        }

        @media (min-width: 1200px) {
          & .callout-content {
            margin-inline-end: -6rem;
          }
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'dark' %}widget-container-padded{% endif %}">
    <div class="callout-wrapper">
      <div class="callout-image-wrapper">
        {% if widget.settings.image != blank %}
          {{ widget.settings.image | image: 'large', 'callout-image' }}
        {% else %}
          <div class="callout-image" style="background-image: url({% placeholder_image 'url' %}); background-size: cover; background-position: center;"></div>
        {% endif %}
      </div>

      <div class="callout-content">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          {% case block.type %}
            {% when 'heading' %}
              {% assign size_class = 'block-text-' | append: block.settings.size %}
              {% if widget.index == 1 %}
                <h1 class="widget-title block-text {{ size_class }} block-text-bold block-text-heading" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </h1>
              {% else %}
                <h2 class="widget-title block-text {{ size_class }} block-text-bold block-text-heading" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </h2>
              {% endif %}

            {% when 'text' %}
              {% assign size_class = 'block-text-' | append: block.settings.size %}
              {% assign style_class = '' %}
              {% if block.settings.uppercase %}{% assign style_class = style_class | append: ' block-text-uppercase' %}{% endif %}
              {% if block.settings.muted %}{% assign style_class = style_class | append: ' block-text-muted' %}{% endif %}
              <p class="widget-description block-text {{ size_class }}{{ style_class }}" data-block-id="{{ blockId }}" data-setting="text">
                {{ block.settings.text }}
              </p>

            {% when 'features' %}
              {% if block.settings.features != blank %}
                <ul class="callout-features" data-block-id="{{ blockId }}">
                  {% assign features_list = block.settings.features | split: '
' %}
                  {% for feature in features_list %}
                    {% assign trimmed_feature = feature | strip %}
                    {% if trimmed_feature != blank %}
                      <li class="callout-feature block-text block-text-muted">
                        <span class="callout-feature-icon">âœ“</span>
                        <span>{{ trimmed_feature }}</span>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              {% endif %}

            {% when 'button' %}
              {% if block.settings.link.text != blank %}
                <div class="widget-actions" data-block-id="{{ blockId }}">
                  <a
                    href="{{ block.settings.link.href }}"
                    class="widget-button {% if block.settings.style == 'secondary' %}widget-button-secondary{% endif %}"
                    data-setting="link"
                    {% if block.settings.link.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.link.text }}
                  </a>
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
