<section
  id="{{ widget.id }}"
  class="widget widget-image-callout widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }} {% if widget.settings.image_position == 'right' %}layout-image-right{% endif %}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="image-callout"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .callout-wrapper {
        position: relative;
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-lg);
        overflow: hidden;
      }

      & .callout-image-wrapper {
        position: relative;
        width: 100%;
        height: 40rem;
        overflow: hidden;
      }

      & .callout-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        border: var(--border-width-thin) solid var(--border-color);
      }

      & .callout-content {
        background-color: var(--bg-primary);
        padding: var(--space-xl);
        border: var(--border-width-thin) solid var(--border-color);
        position: relative;
        z-index: 2;
      }



      @media (min-width: 750px) {
        & .callout-image-wrapper {
          height: 50rem;
        }

        & .callout-content {
          padding: var(--space-3xl);
        }
      }

      @media (min-width: 990px) {
        & .callout-wrapper {
          grid-template-columns: repeat(12, 1fr);
          align-items: center;
          gap: 0;
        }

        & .callout-image-wrapper {
          grid-column: 1 / 8;
          grid-row: 1;
          height: 60rem;
        }

        & .callout-content {
          grid-column: 6 / 13;
          grid-row: 1;
          padding: var(--space-4xl);
          margin-inline-start: -4rem;
        }
      }

      @media (min-width: 1200px) {
        & .callout-content {
          padding: var(--space-5xl);
          margin-inline-start: -6rem;
        }
      }

      /* Variant: Image Right */
      &.layout-image-right {
        @media (min-width: 990px) {
          & .callout-image-wrapper {
            grid-column: 6 / 13;
            grid-row: 1;
          }

          & .callout-content {
            grid-column: 1 / 9;
            grid-row: 1;
            margin-inline-start: 0;
            margin-inline-end: -4rem;
          }
        }

        @media (min-width: 1200px) {
          & .callout-content {
            margin-inline-end: -6rem;
          }
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    <div class="callout-wrapper">
      <div class="callout-image-wrapper reveal reveal-fade">
        {% if widget.settings.image != blank %}
          {{ widget.settings.image | image: 'large', 'callout-image' }}
        {% else %}
          <div class="callout-image" style="background-image: url({% placeholder_image 'url' %}); background-size: cover; background-position: center;"></div>
        {% endif %}
      </div>

      <div class="callout-content content-flow widget-content-align-start">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          {% case block.type %}
            {% when 'heading' %}
              {% assign size_class = 'block-text-' | append: block.settings.size %}
              {% if widget.index == 1 %}
                <h1 class="widget-title block-text {{ size_class }} block-text-heading-weight block-text-heading reveal reveal-up" style="--reveal-delay: {{ forloop.index0 }}" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </h1>
              {% else %}
                <h2 class="widget-title block-text {{ size_class }} block-text-heading-weight block-text-heading reveal reveal-up" style="--reveal-delay: {{ forloop.index0 }}" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </h2>
              {% endif %}

            {% when 'text' %}
              {% assign size_class = 'block-text-' | append: block.settings.size %}
              {% assign style_class = '' %}
              {% if block.settings.uppercase %}{% assign style_class = style_class | append: ' block-text-uppercase' %}{% endif %}
              {% if block.settings.muted %}{% assign style_class = style_class | append: ' block-text-muted' %}{% endif %}
              <div class="widget-description block-text {{ size_class }}{{ style_class }} block-rte reveal reveal-up" style="--reveal-delay: {{ forloop.index0 }}" data-block-id="{{ blockId }}" data-setting="text">
                {{ block.settings.text }}
              </div>

            {% when 'features' %}
              {% if block.settings.features != blank %}
                <ul class="features-list reveal reveal-up" style="--reveal-delay: {{ forloop.index0 }}" data-block-id="{{ blockId }}">
                  {% assign normalized_features = block.settings.features | replace: '\r\n', '\n' %}
                  {% assign features_list = normalized_features | split: '\n' %}
                  {% for feature in features_list %}
                    {% assign trimmed_feature = feature | strip %}
                    {% if trimmed_feature != blank %}
                      {% assign feature_text = trimmed_feature %}
                      {% assign icon_name = '' %}
                      {% assign first_char = trimmed_feature | slice: 0, 1 %}
                      {% if first_char == '+' %}
                        {% assign icon_name = 'check' %}
                        {% assign feature_text = trimmed_feature | remove_first: '+' | strip %}
                      {% elsif first_char == '-' %}
                        {% assign icon_name = 'x' %}
                        {% assign feature_text = trimmed_feature | remove_first: '-' | strip %}
                      {% endif %}
                      <li class="feature-item block-text">
                        {% if icon_name != blank %}
                          <span class="feature-icon">
                            {% render 'icon', icon: icon_name, class: 'feature-icon-svg' %}
                          </span>
                        {% endif %}
                        <span>{{ feature_text }}</span>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              {% endif %}

            {% when 'button' %}
              {% if block.settings.link.text != blank or block.settings.link_2.text != blank %}
                <div class="widget-actions reveal reveal-up" style="--reveal-delay: {{ forloop.index0 }}" data-block-id="{{ blockId }}">
                  {% if block.settings.link.text != blank %}
                    {% if block.settings.size != 'small' and block.settings.size != blank %}
                      {% assign size_class = 'widget-button-' | append: block.settings.size %}
                    {% else %}
                      {% assign size_class = '' %}
                    {% endif %}
                    <a
                      href="{{ block.settings.link.href }}"
                      class="widget-button {{ size_class }} {% if block.settings.style == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                      data-setting="link"
                      {% if block.settings.link.target == '_blank' %}
                        target="_blank" rel="noopener"
                      {% endif %}
                    >
                      {{ block.settings.link.text }}
                    </a>
                  {% endif %}
                  {% if block.settings.link_2.text != blank %}
                    {% if block.settings.size != 'small' and block.settings.size != blank %}
                      {% assign size_class = 'widget-button-' | append: block.settings.size %}
                    {% else %}
                      {% assign size_class = '' %}
                    {% endif %}
                    <a
                      href="{{ block.settings.link_2.href }}"
                      class="widget-button {{ size_class }} {% if block.settings.style_2 == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                      data-setting="link_2"
                      {% if block.settings.link_2.target == '_blank' %}
                        target="_blank" rel="noopener"
                      {% endif %}
                    >
                      {{ block.settings.link_2.text }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
