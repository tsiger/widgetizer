{
  "type": "image-callout",
  "displayName": "Image Callout",
  "aliases": ["cta image", "visual lead", "promotion", "highlight image"],
  "settings": [
    {
      "type": "image",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "light",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "displayName": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Enterprise Solutions"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "default": "2xl",
          "options": [
            { "value": "lg", "label": "Large" },
            { "value": "xl", "label": "Extra Large" },
            { "value": "2xl", "label": "2X Large" },
            { "value": "3xl", "label": "3X Large" }
          ]
        }
      ]
    },
    {
      "type": "text",
      "displayName": "Text",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "A paragraph of descriptive text goes here."
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "default": "base",
          "options": [
            { "value": "sm", "label": "Small" },
            { "value": "base", "label": "Base" },
            { "value": "lg", "label": "Large" }
          ]
        },
        {
          "type": "checkbox",
          "id": "uppercase",
          "label": "Uppercase",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "muted",
          "label": "Muted color",
          "default": false
        }
      ]
    },
    {
      "type": "features",
      "displayName": "Features",
      "settings": [
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (one per line)",
          "default": "Feature 1\nFeature 2\nFeature 3"
        }
      ]
    },
    {
      "type": "button",
      "displayName": "Button",
      "settings": [
        {
          "type": "link",
          "id": "link",
          "label": "Button",
          "default": {
            "text": "Learn More",
            "href": "#",
            "target": "_self"
          }
        },
        {
          "type": "select",
          "id": "style",
          "label": "Style",
          "default": "primary",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "secondary", "label": "Secondary" }
          ]
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
      "type": "text",
      "settings": {
        "text": "Why Choose Us",
        "size": "sm",
        "uppercase": true,
        "muted": true
      }
    },
    {
      "type": "heading",
      "settings": {
        "text": "Enterprise-Grade Solutions",
        "size": "2xl"
      }
    },
    {
      "type": "text",
      "settings": {
        "text": "Scale your business with confidence using our proven platform trusted by industry leaders worldwide.",
        "size": "base",
        "uppercase": false,
        "muted": false
      }
    },
    {
      "type": "features",
      "settings": {
        "features": "99.9% uptime SLA guarantee\n24/7 dedicated support team\nEnterprise security & compliance"
      }
    },
    {
      "type": "button",
      "settings": {
        "link": {
          "text": "Request Demo",
          "href": "#",
          "target": "_self"
        },
        "style": "primary"
      }
    }
  ]
}
