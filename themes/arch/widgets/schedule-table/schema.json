{
  "type": "schedule-table",
  "displayName": "Schedule Table",
  "aliases": ["agenda", "time table", "timetable", "events schedule"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Opening Hours"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "id": "content_header",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "note",
      "label": "Additional note",
      "default": "We are closed on public holidays"
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "select",
      "id": "week_start_day",
      "label": "Week starts on",
      "options": [
        { "value": "0", "label": "Sunday" },
        { "value": "1", "label": "Monday" }
      ],
      "default": "1"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "highlight", "label": "Highlight" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "day",
      "displayName": "Day",
      "settings": [
        {
          "type": "header",
          "id": "content_header",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "day",
          "label": "Day",
          "default": "Monday"
        },
        {
          "type": "text",
          "id": "hours",
          "label": "Hours",
          "default": "9:00 AM - 5:00 PM"
        },
        {
          "type": "header",
          "id": "options_header",
          "label": "Options"
        },
        {
          "type": "checkbox",
          "id": "closed",
          "label": "Closed",
          "default": false
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
      "type": "day",
      "settings": {
        "day": "Monday",
        "hours": "9:00 AM - 9:00 PM",
        "closed": false
      }
    },
    {
      "type": "day",
      "settings": {
        "day": "Tuesday",
        "hours": "9:00 AM - 9:00 PM",
        "closed": false
      }
    },
    {
      "type": "day",
      "settings": {
        "day": "Wednesday",
        "hours": "9:00 AM - 9:00 PM",
        "closed": false
      }
    },
    {
      "type": "day",
      "settings": {
        "day": "Thursday",
        "hours": "9:00 AM - 9:00 PM",
        "closed": false
      }
    },
    {
      "type": "day",
      "settings": {
        "day": "Friday",
        "hours": "9:00 AM - 10:00 PM",
        "closed": false
      }
    },
    {
      "type": "day",
      "settings": {
        "day": "Saturday",
        "hours": "10:00 AM - 10:00 PM",
        "closed": false
      }
    },
    {
      "type": "day",
      "settings": {
        "day": "Sunday",
        "hours": "Closed",
        "closed": true
      }
    }
  ]
}
