<section
  id="{{ widget.id }}"
  class="widget widget-banner widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }} {% if widget.settings.image != blank %}has-bg-image has-overlay{% endif %} {% if widget.settings.height == 'small' %}widget-height-half{% elsif widget.settings.height == 'medium' %}widget-height-two-thirds{% elsif widget.settings.height == 'large' %}widget-height-full{% endif %}"
  {% if widget.settings.image != blank %}
    style="background-image: url('{{ widget.settings.image | image: 'path', 'large' }}'); --widget-overlay-color: {{ widget.settings.overlay_color | default: 'rgba(0,0,0,0.5)' }}; --widget-overlay-opacity: 1;"
  {% elsif widget.settings.color_scheme == 'dark' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="banner"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      /* Reset default widget spacing for full-bleed layouts */
      margin-block: 0;
      padding-inline: 0;

      {% unless widget.settings.fullwidth %}
      max-width: var(--container-max-width);
      margin-inline: auto;
      {% endunless %}
    }
  </style>

  <div class="widget-container">
    <div class="widget-content content-flow widget-content-lg {% if widget.settings.alignment == 'center' %}widget-content-align-center{% else %}widget-content-align-start{% endif %}">
      {% for blockId in widget.blocksOrder %}
        {% assign block = widget.blocks[blockId] %}
        {% case block.type %}
          {% when 'heading' %}
            {% assign size_class = 'block-text-' | append: block.settings.size %}
            {% if widget.index == 1 %}
              <h1 class="widget-headline block-text {{ size_class }} block-text-bold block-text-heading" data-block-id="{{ blockId }}" data-setting="text">
                {{ block.settings.text }}
              </h1>
            {% else %}
              <h2 class="widget-headline block-text {{ size_class }} block-text-bold block-text-heading" data-block-id="{{ blockId }}" data-setting="text">
                {{ block.settings.text }}
              </h2>
            {% endif %}
          {% when 'text' %}
            {% assign size_class = 'block-text-' | append: block.settings.size %}
            {% assign style_class = '' %}
            {% if block.settings.uppercase %}{% assign style_class = style_class | append: ' block-text-uppercase' %}{% endif %}
            {% if block.settings.muted %}{% assign style_class = style_class | append: ' block-text-muted' %}{% endif %}
            <p class="widget-description block-text {{ size_class }}{{ style_class }}" data-block-id="{{ blockId }}" data-setting="text">
              {{ block.settings.text }}
            </p>
          {% when 'button' %}
            {% if block.settings.link.text != blank or block.settings.link_2.text != blank %}
              {% assign gap_value = 'var(--space-md)' %}
              {% case block.settings.size %}
                {% when 'small' %}{% assign gap_value = 'var(--space-sm)' %}
                {% when 'medium' %}{% assign gap_value = 'var(--space-md)' %}
                {% when 'large' %}{% assign gap_value = 'var(--space-lg)' %}
                {% when 'xlarge' %}{% assign gap_value = 'var(--space-xl)' %}
              {% endcase %}
              <div class="widget-actions" data-block-id="{{ blockId }}" style="gap: {{ gap_value }};">
                {% if block.settings.link.text != blank %}
                  {% if block.settings.size != 'small' and block.settings.size != blank %}
                    {% assign size_class = 'widget-button-' | append: block.settings.size %}
                  {% else %}
                    {% assign size_class = '' %}
                  {% endif %}
                  <a
                    href="{{ block.settings.link.href }}"
                    class="widget-button {{ size_class }} {% if block.settings.style == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                    data-setting="link"
                    {% if block.settings.link.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.link.text }}
                  </a>
                {% endif %}
                {% if block.settings.link_2.text != blank %}
                  {% if block.settings.size != 'small' and block.settings.size != blank %}
                    {% assign size_class = 'widget-button-' | append: block.settings.size %}
                  {% else %}
                    {% assign size_class = '' %}
                  {% endif %}
                  <a
                    href="{{ block.settings.link_2.href }}"
                    class="widget-button {{ size_class }} {% if block.settings.style_2 == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                    data-setting="link_2"
                    {% if block.settings.link_2.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.link_2.text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>
