<section
  id="{{ widget.id }}"
  class="widget widget-banner {% if widget.settings.image != blank %}has-bg-image has-overlay overlay-medium{% elsif widget.settings.background_color != blank %}has-bg-color{% endif %} {% if widget.settings.text_color == 'light' %}color-scheme-dark{% else %}color-scheme-light{% endif %} {% if widget.settings.height == 'small' %}widget-height-half{% elsif widget.settings.height == 'medium' %}widget-height-two-thirds{% elsif widget.settings.height == 'large' %}widget-height-full{% endif %}"
  {% if widget.settings.image != blank %}
    style="--widget-bg-image: url('{{ widget.settings.image | image: 'path', 'large' }}');"
  {% elsif widget.settings.background_color != blank %}
    style="--widget-bg-color: {{ widget.settings.background_color }};"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="banner"
>
  <style>
    #{{ widget.id }} {
      /* Reset default widget spacing for full-bleed layouts */
      margin-block: 0;
      padding-inline: 0;

      {% unless widget.settings.fullwidth %}
      max-width: var(--container-max-width);
      margin-inline: auto;
      {% endunless %}
    }
  </style>

  <div class="widget-container">
    <div class="widget-content widget-content-lg widget-content-align-center">
      {% if widget.settings.eyebrow != blank %}
        <span class="widget-eyebrow">{{ widget.settings.eyebrow }}</span>
      {% endif %}
      {% if widget.settings.headline != blank %}
        <h1 class="widget-headline">{{ widget.settings.headline }}</h1>
      {% endif %}
      {% if widget.settings.description != blank %}
        <p class="widget-description">{{ widget.settings.description }}</p>
      {% endif %}
      {% if widget.settings.button_link.text != blank %}
        <div class="widget-actions">
          <a
            href="{{ widget.settings.button_link.href }}"
            class="widget-button widget-button-primary"
            {% if widget.settings.button_link.target == '_blank' %}
              target="_blank" rel="noopener"
            {% endif %}
          >
            {{ widget.settings.button_link.text }}
          </a>
          {% if widget.settings.secondary_link.text != blank %}
            <a
              href="{{ widget.settings.secondary_link.href }}"
              class="widget-button widget-button-secondary"
              {% if widget.settings.secondary_link.target == '_blank' %}
                target="_blank" rel="noopener"
              {% endif %}
            >
              {{ widget.settings.secondary_link.text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>
