<section
  id="{{ widget.id }}"
  class="widget widget-banner {% if widget.settings.image != blank %}has-bg-image has-overlay{% elsif widget.settings.background_color != blank %}has-bg-color{% endif %} {% if widget.settings.text_color == 'light' %}color-scheme-dark{% else %}color-scheme-light{% endif %} {% if widget.settings.height == 'small' %}widget-height-half{% elsif widget.settings.height == 'medium' %}widget-height-two-thirds{% elsif widget.settings.height == 'large' %}widget-height-full{% endif %}"
  {% if widget.settings.image != blank %}
    style="background-image: url('{{ widget.settings.image | image: 'path', 'large' }}'); --widget-overlay-color: {{ widget.settings.overlay_color | default: 'rgba(0,0,0,0.5)' }}; --widget-overlay-opacity: 1;"
  {% elsif widget.settings.background_color != blank %}
    style="--widget-bg-color: {{ widget.settings.background_color }};"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="banner"
>
  <style>
    #{{ widget.id }} {
      /* Reset default widget spacing for full-bleed layouts */
      margin-block: 0;
      padding-inline: 0;

      {% unless widget.settings.fullwidth %}
      max-width: var(--container-max-width);
      margin-inline: auto;
      {% endunless %}
      & .widget-content {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
      }
    }
  </style>

  <div class="widget-container">
    <div class="widget-content widget-content-lg widget-content-align-center">
      {% for blockId in widget.blocksOrder %}
        {% assign block = widget.blocks[blockId] %}
        {% case block.type %}
          {% when 'heading' %}
            {% assign size_class = 'block-text-' | append: block.settings.size %}
            <h1 class="widget-headline block-text {{ size_class }} block-text-bold block-text-heading" data-block-id="{{ blockId }}" data-setting="text">
              {{ block.settings.text }}
            </h1>
          {% when 'text' %}
            {% assign size_class = 'block-text-' | append: block.settings.size %}
            {% assign style_class = '' %}
            {% if block.settings.uppercase %}{% assign style_class = style_class | append: ' block-text-uppercase' %}{% endif %}
            {% if block.settings.bold %}{% assign style_class = style_class | append: ' block-text-bold' %}{% endif %}
            <p class="widget-description block-text {{ size_class }}{{ style_class }}" data-block-id="{{ blockId }}" data-setting="text">
              {{ block.settings.text }}
            </p>
          {% when 'button' %}
            {% if block.settings.link.text != blank or block.settings.link_2.text != blank %}
              <div class="widget-actions" data-block-id="{{ blockId }}">
                {% if block.settings.link.text != blank %}
                  <a
                    href="{{ block.settings.link.href }}"
                    class="widget-button {% if block.settings.style == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                    data-setting="link"
                    {% if block.settings.link.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.link.text }}
                  </a>
                {% endif %}
                {% if block.settings.link_2.text != blank %}
                  <a
                    href="{{ block.settings.link_2.href }}"
                    class="widget-button {% if block.settings.style_2 == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                    data-setting="link_2"
                    {% if block.settings.link_2.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.link_2.text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>
