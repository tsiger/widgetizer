{
  "type": "embed",
  "displayName": "Embed Widget",
  "aliases": ["iframe", "external content", "integration", "third-party"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Watch Our Video"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Learn more about our product in this quick video overview."
