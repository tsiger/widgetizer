    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "select",
      "id": "max_width",
      "label": "Container Width",
      "default": "large",
      "options": [
        { "value": "full", "label": "Full Width" },
        { "value": "large", "label": "Large (900px)" },
        { "value": "medium", "label": "Medium (800px)" },
        { "value": "small", "label": "Small (600px)" }
      ]
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "center",
      "options": [
        { "value": "start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "end", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "highlight", "label": "Highlight" }
      ]
