<section
  id="{{ widget.id }}"
  class="widget widget-type-image-text widget-{{ widget.id }} {% if widget.settings.image_position == 'right' %}layout-image-right{% endif %}"
  {% if widget.settings.background == 'secondary' %}
    style="--widget-bg-color: var(--bg-secondary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="image-text"
>
  <style>
    .widget-{{ widget.id }} {
      & .image-text-wrapper {
        display: flex;
        flex-direction: column;
        gap: var(--space-3xl);
        align-items: center;
      }

      & .image-wrapper {
        width: 100%;

        & img {
          width: 100%;
          height: auto;
          display: block;
          border: var(--border-width-thin) solid var(--border-color);
        }
      }

      & .text-content {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
      }

      & .widget-actions {
        margin-block-start: var(--space-sm);
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-md);
      }

      @media (min-width: 990px) {
        & .image-text-wrapper {
          flex-direction: row;
          gap: var(--space-4xl);
        }

        & .image-wrapper,
        & .text-content {
          width: 50%;
        }

        /* Image right variant */
        &.layout-image-right .image-text-wrapper {
          flex-direction: row-reverse;
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.background == 'secondary' %}widget-container-padded{% endif %}">
    <div class="widget-content">
      <div class="image-text-wrapper">
        <div class="image-wrapper">
          {% if widget.settings.image != blank %}
            {{ widget.settings.image | image: 'large', 'image-text-image' }}
          {% else %}
            {% placeholder_image %}
          {% endif %}
        </div>

        <div class="text-content">
          {% for blockId in widget.blocksOrder %}
            {% assign block = widget.blocks[blockId] %}
            {% case block.type %}
              {% when 'heading' %}
                {% assign size_class = 'block-text-' | append: block.settings.size %}
                <h2 class="block-text {{ size_class }} block-text-bold block-text-heading" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </h2>
              {% when 'text' %}
                {% assign size_class = 'block-text-' | append: block.settings.size %}
                {% assign style_class = '' %}
                {% if block.settings.uppercase %}{% assign style_class = style_class | append: ' block-text-uppercase' %}{% endif %}
                {% if block.settings.muted %}{% assign style_class = style_class | append: ' block-text-muted' %}{% endif %}
                <p class="block-text {{ size_class }}{{ style_class }}" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </p>
              {% when 'button' %}
                {% if block.settings.link.text != blank or block.settings.link_2.text != blank %}
                  <div class="widget-actions" data-block-id="{{ blockId }}">
                    {% if block.settings.link.text != blank %}
                      <a
                        href="{{ block.settings.link.href }}"
                        class="widget-button {% if block.settings.style == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                        data-setting="link"
                        {% if block.settings.link.target == '_blank' %}
                          target="_blank" rel="noopener"
                        {% endif %}
                      >
                        {{ block.settings.link.text }}
                      </a>
                    {% endif %}
                    {% if block.settings.link_2.text != blank %}
                      <a
                        href="{{ block.settings.link_2.href }}"
                        class="widget-button {% if block.settings.style_2 == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                        data-setting="link_2"
                        {% if block.settings.link_2.target == '_blank' %}
                          target="_blank" rel="noopener"
                        {% endif %}
                      >
                        {{ block.settings.link_2.text }}
                      </a>
                    {% endif %}
                  </div>
                {% endif %}
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
