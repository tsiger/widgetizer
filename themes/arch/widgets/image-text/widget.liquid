<section
  id="{{ widget.id }}"
  class="widget widget-image-text widget-{{ widget.id }} {% if widget.settings.image_position == 'right' %}layout-image-right{% endif %}"
  {% if widget.settings.background == 'secondary' %}
    style="--widget-bg-color: var(--bg-secondary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="image-text"
>
  <style>
    .widget-{{ widget.id }} {
      & .image-text-wrapper {
        display: flex;
        flex-direction: column;
        gap: var(--space-3xl);
        align-items: center;
      }

      & .image-wrapper {
        width: 100%;

        & img {
          width: 100%;
          height: auto;
          display: block;
          border: var(--border-width-thin) solid var(--border-color);
        }
      }

      & .text-content {
        width: 100%;
      }

      & .text-description {
        margin-block-end: var(--space-xl);
      }

      & .widget-actions {
        margin-block-start: var(--space-lg);
      }

      @media (min-width: 990px) {
        & .image-text-wrapper {
          flex-direction: row;
          gap: var(--space-4xl);
        }

        & .image-wrapper,
        & .text-content {
          width: 50%;
        }

        /* Image right variant */
        &.layout-image-right .image-text-wrapper {
          flex-direction: row-reverse;
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.background == 'secondary' %}widget-container-padded{% endif %}">
    <div class="widget-content">
      <div class="image-text-wrapper">
        <div class="image-wrapper">
          {% if widget.settings.image != blank %}
            {{ widget.settings.image | image: 'large', 'image-text-image' }}
          {% else %}
            {% placeholder_image %}
          {% endif %}
        </div>

        <div class="text-content">
          {% for blockId in widget.blocksOrder %}
            {% assign block = widget.blocks[blockId] %}
            {% case block.type %}
              {% when 'eyebrow' %}
                <span class="widget-eyebrow" data-block-id="{{ blockId }}" data-setting="text">
                  {{- block.settings.text -}}
                </span>
              {% when 'heading' %}
                <h2 class="widget-headline" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </h2>
              {% when 'text' %}
                <p class="text-description widget-description" data-block-id="{{ blockId }}" data-setting="text">
                  {{ block.settings.text }}
                </p>
              {% when 'button' %}
                {% if block.settings.link.text != blank %}
                  <div class="widget-actions" data-block-id="{{ blockId }}">
                    <a
                      href="{{ block.settings.link.href }}"
                    class="widget-button {% if block.settings.style == 'primary' %}widget-button-primary{% else %}widget-button-secondary{% endif %}"
                      data-setting="link"
                      {% if block.settings.link.target == '_blank' %}
                        target="_blank" rel="noopener"
                      {% endif %}
                    >
                      {{ block.settings.link.text }}
                    </a>
                  </div>
                {% endif %}
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
