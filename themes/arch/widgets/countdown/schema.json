{
  "type": "countdown",
  "displayName": "Countdown Timer",
  "aliases": ["timer", "launch date", "offer ends", "deadline"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Coming Soon"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "target_date",
      "label": "Target date (YYYY-MM-DD HH:MM)",
      "default": "2025-01-01 00:00"
    },
    {
      "type": "text",
      "id": "expired_message",
      "label": "Message when expired",
      "default": "The wait is over!"
    },
    {
      "type": "link",
      "id": "button",
      "label": "Call-to-action button"
    },
    {
      "type": "select",
      "id": "style",
      "label": "Style",
      "options": [
        { "value": "cards", "label": "Cards" },
        { "value": "minimal", "label": "Minimal" }
      ],
      "default": "cards"
    },
    {
      "type": "checkbox",
      "id": "show_seconds",
      "label": "Show seconds",
      "default": true
    },
    {
      "type": "select",
      "id": "background",
      "label": "Background",
      "default": "primary",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" }
      ]
    }
  ]
}
