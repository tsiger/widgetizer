<section
  id="{{ widget.id }}"
  class="widget widget-type-social-icons widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="social-icons"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .social-icons-content {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-md);
        justify-content: center;
      }

      & .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-content);
        transition: color var(--transition-speed-fast);
        width: {{ widget.settings.icon_size | default: 2.4 }}rem;
        height: {{ widget.settings.icon_size | default: 2.4 }}rem;

        &:hover {
          color: var(--accent);
        }

        & svg {
          width: 100%;
          height: 100%;
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          {% if widget.index == 1 %}
            <h1 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h1>
          {% else %}
            <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
          {% endif %}
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <div class="social-icons-content">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <a
            href="{{ block.settings.link.href | default: '#' }}"
            class="social-link"
            data-block-id="{{ blockId }}"
            aria-label="{{ block.settings.platform | capitalize }}"
            {% if block.settings.link.target == '_blank' %}
              target="_blank" rel="noopener"
            {% endif %}
          >
            {% render 'icon', icon: block.settings.platform %}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
