{
  "type": "social-icons",
  "displayName": "Social Icons",
  "aliases": ["links", "follow", "share", "connect"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Follow Us"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Stay connected with us on social media."
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon size",
      "default": 2.4,
      "min": 1.6,
      "max": 4.8,
      "step": 0.2
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "standard",
      "options": [
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "highlight",
          "label": "Highlight"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "displayName": "Social Link",
      "settings": [
        {
          "type": "header",
          "id": "content_header",
          "label": "Content"
        },
        {
          "type": "select",
          "id": "platform",
          "label": "Platform",
          "default": "facebook",
          "options": [
            {
              "value": "facebook",
              "label": "Facebook"
            },
            {
              "value": "instagram",
              "label": "Instagram"
            },
            {
              "value": "twitter",
              "label": "Twitter"
            },
            {
              "value": "x",
              "label": "X"
            },
            {
              "value": "linkedin",
              "label": "LinkedIn"
            },
            {
              "value": "youtube",
              "label": "YouTube"
            },
            {
              "value": "tiktok",
              "label": "TikTok"
            },
            {
              "value": "pinterest",
              "label": "Pinterest"
            },
            {
              "value": "github",
              "label": "GitHub"
            },
            {
              "value": "github-copilot",
              "label": "GitHub Copilot"
            },
            {
              "value": "mastodon",
              "label": "Mastodon"
            },
            {
              "value": "bluesky",
              "label": "Bluesky"
            },
            {
              "value": "discord",
              "label": "Discord"
            },
            {
              "value": "meta",
              "label": "Meta"
            },
            {
              "value": "reddit",
              "label": "Reddit"
            },
            {
              "value": "telegram",
              "label": "Telegram"
            },
            {
              "value": "threads",
              "label": "Threads"
            },
            {
              "value": "whatsapp",
              "label": "WhatsApp"
            },
            {
              "value": "mail",
              "label": "Email"
            }
          ]
        },
        {
          "type": "link",
          "id": "link",
          "label": "Link URL",
          "hide_text": true
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
      "type": "social_link",
      "settings": {
        "platform": "facebook",
        "link": {
          "href": "https://facebook.com",
          "text": "Facebook"
        }
      }
    },
    {
      "type": "social_link",
      "settings": {
        "platform": "instagram",
        "link": {
          "href": "https://instagram.com",
          "text": "Instagram"
        }
      }
    },
    {
      "type": "social_link",
      "settings": {
        "platform": "twitter",
        "link": {
          "href": "https://twitter.com",
          "text": "X"
        }
      }
    }
  ]
}
