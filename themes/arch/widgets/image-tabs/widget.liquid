<section
  id="{{ widget.id }}"
  class="widget widget-image-tabs widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }} {% if widget.settings.image_position == 'right' %}layout-image-right{% endif %}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="image-tabs"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .image-tabs-wrapper {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }

      & .image-tabs-image-area {
        position: relative;
        width: 100%;
        aspect-ratio: 4 / 3;
        overflow: hidden;
        background-color: var(--bg-secondary);
        border: var(--border-width-thin) solid var(--border-color);
      }

      & .image-tabs-image-frame {
        width: 100%;
        height: 100%;
      }

      & .image-tabs-image-frame[hidden] {
        display: none;
      }

      & .image-tabs-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }

      & .image-tabs-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0;
      }

      & .image-tabs-tab {
        background-color: var(--bg-primary);
        border: var(--border-width-thin) solid var(--border-color);
        border-block-start: none;
        padding: var(--space-lg);
        cursor: pointer;
        transition: background-color 0.3s;
        position: relative;

        &:first-child {
          border-block-start: var(--border-width-thin) solid var(--border-color);
        }

        &:hover {
          background-color: var(--bg-secondary);
        }

        &.is-active {
          background-color: var(--bg-secondary);
          box-shadow: inset 0.3rem 0 0 0 var(--text-heading);
        }
      }

      & .image-tabs-tab-button {
        background: none;
        border: none;
        padding: 0;
        text-align: start;
        width: 100%;
        cursor: pointer;
        font-family: inherit;
      }

      & .image-tabs-tab-description {
        margin: 0;
      }

      @media (min-width: 750px) {
        & .image-tabs-wrapper {
          grid-template-columns: 1fr 1fr;
        }

        & .image-tabs-tab {
          padding: var(--space-xl);
        }
      }

      @media (min-width: 990px) {
        & .image-tabs-image-area {
          aspect-ratio: 3 / 2;
        }
      }

      &.layout-image-right {
        @media (min-width: 750px) {
          & .image-tabs-image-area {
            order: 2;
          }

          & .image-tabs-list {
            order: 1;
          }

          & .image-tabs-tab.is-active {
            box-shadow: inset -0.3rem 0 0 0 var(--text-heading);
          }
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% assign header_delay = 0 %}
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
          {% assign header_delay = header_delay | plus: 1 %}
        {% endif %}
        {% if widget.settings.title != blank %}
          {% if widget.index == 1 %}
            <h1 class="widget-headline reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="title">{{ widget.settings.title }}</h1>
          {% else %}
            <h2 class="widget-headline reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="title">{{ widget.settings.title }}</h2>
          {% endif %}
          {% assign header_delay = header_delay | plus: 1 %}
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      {% assign first_block_id = widget.blocksOrder | first %}
      <div class="image-tabs-wrapper reveal reveal-up">
        <div
          class="image-tabs-image-area"
          id="image-tabs-panel-{{ widget.id }}"
          role="tabpanel"
          aria-labelledby="image-tabs-tab-{{ widget.id }}-{{ widget.blocksOrder | first }}"
        >
          {% for blockId in widget.blocksOrder %}
            {% assign block = widget.blocks[blockId] %}
            <div
              class="image-tabs-image-frame{% if blockId == first_block_id %} is-active{% endif %}"
              data-block-id="{{ blockId }}"
              {% unless blockId == first_block_id %}hidden{% endunless %}
            >
              {% if block.settings.image != blank %}
                {{ block.settings.image | image: 'large', 'image-tabs-image' }}
              {% else %}
                {% placeholder_image 'landscape', { "class": "image-tabs-image" } %}
              {% endif %}
            </div>
          {% endfor %}
        </div>

        <ul class="image-tabs-list" role="tablist">
          {% assign tab_heading_level = 'h3' %}
          {% if widget.settings.title == blank %}
            {% assign tab_heading_level = 'h2' %}
          {% endif %}

          {% assign first_tab = true %}
          {% for blockId in widget.blocksOrder %}
            {% assign block = widget.blocks[blockId] %}
            <li
              class="image-tabs-tab {% if first_tab %}is-active{% endif %}"
              role="presentation"
              data-block-id="{{ blockId }}"
            >
              <button
                type="button"
                id="image-tabs-tab-{{ widget.id }}-{{ blockId }}"
                class="image-tabs-tab-button"
                role="tab"
                aria-selected="{% if first_tab %}true{% else %}false{% endif %}"
                aria-controls="image-tabs-panel-{{ widget.id }}"
                tabindex="{% if first_tab %}0{% else %}-1{% endif %}"
              >
                {% if block.settings.title != blank %}
                  <{{ tab_heading_level }} class="image-tabs-tab-title block-text block-text-lg block-text-heading-weight block-text-heading" data-setting="title">{{ block.settings.title }}</{{ tab_heading_level }}>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="image-tabs-tab-description block-text block-text-sm" data-setting="description">{{ block.settings.description }}</p>
                {% endif %}
              </button>
            </li>
            {% assign first_tab = false %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>

  <script>
    (function () {
      const widget = document.getElementById('{{ widget.id }}');
      if (!widget || widget.dataset.initialized) return;
      widget.dataset.initialized = 'true';

      const panel = widget.querySelector('#image-tabs-panel-{{ widget.id }}');
      const tabs = Array.from(widget.querySelectorAll('.image-tabs-tab'));
      const frames = Array.from(widget.querySelectorAll('.image-tabs-image-frame'));

      const activateTab = (button) => {
        tabs.forEach((t) => {
          const tabButton = t.querySelector('.image-tabs-tab-button');
          t.classList.remove('is-active');
          tabButton.setAttribute('aria-selected', 'false');
          tabButton.setAttribute('tabindex', '-1');
        });

        const tab = button.closest('.image-tabs-tab');
        tab.classList.add('is-active');
        button.setAttribute('aria-selected', 'true');
        button.setAttribute('tabindex', '0');

        if (panel) {
          panel.setAttribute('aria-labelledby', button.id);
        }

        const blockId = tab?.dataset.blockId;
        if (blockId) {
          frames.forEach((frame) => {
            const isActive = frame.dataset.blockId === blockId;
            frame.hidden = !isActive;
            frame.classList.toggle('is-active', isActive);
          });
        }
      };

      tabs.forEach((tab) => {
        const button = tab.querySelector('.image-tabs-tab-button');

        button.addEventListener('click', () => {
          activateTab(button);
        });

        button.addEventListener('keydown', (event) => {
          const currentIndex = tabs.indexOf(tab);
          let nextIndex = null;

          switch (event.key) {
            case 'ArrowRight':
              nextIndex = (currentIndex + 1) % tabs.length;
              break;
            case 'ArrowLeft':
              nextIndex = (currentIndex - 1 + tabs.length) % tabs.length;
              break;
            case 'Home':
              nextIndex = 0;
              break;
            case 'End':
              nextIndex = tabs.length - 1;
              break;
            default:
              return;
          }

          event.preventDefault();
          const nextButton = tabs[nextIndex].querySelector('.image-tabs-tab-button');
          nextButton.focus();
          activateTab(nextButton);
        });
      });
    })();
  </script>
</section>
