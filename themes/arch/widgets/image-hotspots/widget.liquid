<section
  id="{{ widget.id }}"
  class="widget widget-image-hotspots widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }}"
  {% if widget.settings.color_scheme == 'highlight' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="image-hotspots"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .image-hotspots-wrapper {
        position: relative;
        border: var(--border-width-thin) solid var(--border-color);
      }

      & .image-hotspots-image {
        width: 100%;
        height: auto;
        display: block;
      }

      & .image-hotspot {
        position: absolute;
        width: 2.6rem;
        height: 2.6rem;
        transform: translate(-50%, -50%);
        z-index: 1;
        pointer-events: none;
      }

      & .image-hotspot::after {
        content: "";
        position: absolute;
        inset: -0.6rem;
        border: var(--border-width-thin) solid var(--border-color);
        border-radius: 50%;
        animation: hotspot-pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        pointer-events: none;
      }

      & .image-hotspot-button {
        position: relative;
        width: 100%;
        height: 100%;
        background-color: var(--text-heading);
        border: var(--border-width-medium) solid var(--bg-primary);
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s, background-color 0.3s;
        pointer-events: auto;

        &:hover {
          transform: scale(1.1);
        }

        &:focus {
          outline: var(--border-width-medium) solid var(--text-heading);
          outline-offset: 0.3rem;
        }

        &:active {
          transform: scale(0.95);
        }
      }

      & .image-hotspot-button.is-active {
        transform: scale(1.1);
      }

      & .image-hotspot-icon {
        width: 1rem;
        height: 1rem;
        stroke: var(--bg-primary);
        stroke-width: 2;
        fill: none;
      }

      & .image-hotspot-tooltip {
        position: absolute;
        inset-block-start: calc(100% + 1.2rem);
        inset-inline-start: 50%;
        transform: translateX(-50%);
        width: 28rem;
        max-width: calc(100vw - var(--space-xl));
        background-color: var(--bg-primary);
        border: var(--border-width-thin) solid var(--border-color);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s, visibility 0.3s;
        z-index: 10;
        pointer-events: none;
        padding: var(--space-lg);

        &::before {
          content: "";
          position: absolute;
          inset-block-end: 100%;
          inset-inline-start: 50%;
          transform: translateX(-50%);
          border: 0.8rem solid transparent;
          border-block-end-color: var(--border-color);
        }

        &::after {
          content: "";
          position: absolute;
          inset-block-end: calc(100% - 1px);
          inset-inline-start: 50%;
          transform: translateX(-50%);
          border: 0.8rem solid transparent;
          border-block-end-color: var(--bg-primary);
        }
      }

      & .image-hotspot-tooltip.is-visible {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
      }

      & .image-hotspot-tooltip-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: var(--space-sm);
        margin-block-end: var(--space-sm);
      }

      & .image-hotspot-tooltip-title {
        margin: 0;
      }

      & .image-hotspot-tooltip-close {
        background: transparent;
        border: none;
        cursor: pointer;
        padding: var(--space-2xs);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.3s;
        flex-shrink: 0;
        margin-block-start: calc(var(--space-2xs) * -1);
        margin-inline-end: calc(var(--space-2xs) * -1);

        &:hover {
          opacity: 0.7;
        }

        &:focus {
          outline: var(--border-width-medium) solid var(--text-heading);
          outline-offset: 0.2rem;
        }
      }

      & .image-hotspot-tooltip-close-icon {
        width: 1.6rem;
        height: 1.6rem;
        stroke: var(--text-heading);
        stroke-width: 2;
        fill: none;
      }

      & .image-hotspot-tooltip-description {
        margin: 0;
      }

      & .image-hotspot-tooltip-footer {
        margin-block-start: var(--space-md);
      }

      @keyframes hotspot-pulse {
        0%, 100% {
          opacity: 1;
          transform: scale(1);
        }
        50% {
          opacity: 0;
          transform: scale(1.5);
        }
      }

      @media (min-width: 750px) {
        & .image-hotspot {
          width: 3.2rem;
          height: 3.2rem;
        }

        & .image-hotspot::after {
          inset: -0.8rem;
        }

        & .image-hotspot-icon {
          width: 1.2rem;
          height: 1.2rem;
        }

        & .image-hotspot-tooltip {
          width: 32rem;
        }
      }

      @media (min-width: 990px) {
        & .image-hotspot {
          width: 3.6rem;
          height: 3.6rem;
        }

        & .image-hotspot::after {
          inset: -1rem;
        }

        & .image-hotspot-icon {
          width: 1.4rem;
          height: 1.4rem;
        }

        & .image-hotspot-tooltip {
          width: 36rem;
        }
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'highlight' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% assign header_delay = 0 %}
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
          {% assign header_delay = header_delay | plus: 1 %}
        {% endif %}
        {% if widget.settings.title != blank %}
          {% if widget.index == 1 %}
            <h1 class="widget-headline reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="title">{{ widget.settings.title }}</h1>
          {% else %}
            <h2 class="widget-headline reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="title">{{ widget.settings.title }}</h2>
          {% endif %}
          {% assign header_delay = header_delay | plus: 1 %}
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description reveal reveal-up" style="--reveal-delay: {{ header_delay }}" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content widget-content-lg">
      <div class="image-hotspots-wrapper reveal reveal-fade">
        <!-- Main Image -->
        {% if widget.settings.image != blank %}
          {% image src: widget.settings.image, size: 'large', class: 'image-hotspots-image', loading: 'eager' %}
        {% else %}
          {% placeholder_image aspect: 'landscape', class: 'image-hotspots-image' %}
        {% endif %}

        <!-- Hotspots -->
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <div
            class="image-hotspot"
            style="inset-inline-start: {{ block.settings.position_x | default: 50 }}%; inset-block-start: {{ block.settings.position_y | default: 50 }}%"
            data-block-id="{{ blockId }}"
          >
            <button
              type="button"
              class="image-hotspot-button"
              aria-label="{{ block.settings.title | default: 'View details' }}"
              aria-expanded="false"
              aria-controls="image-hotspot-tooltip-{{ widget.id }}-{{ blockId }}"
              aria-describedby="image-hotspot-tooltip-{{ widget.id }}-{{ blockId }}"
            >
              <svg class="image-hotspot-icon" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 5v14" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M5 12h14" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </button>

            <div
              class="image-hotspot-tooltip"
              role="tooltip"
              id="image-hotspot-tooltip-{{ widget.id }}-{{ blockId }}"
              aria-hidden="true"
            >
              <div class="image-hotspot-tooltip-header">
                {% if block.settings.title != blank %}
                  <h3 class="image-hotspot-tooltip-title block-text block-text-lg block-text-heading-weight block-text-heading" data-setting="title">{{ block.settings.title }}</h3>
                {% endif %}
                <button type="button" class="image-hotspot-tooltip-close" aria-label="Close tooltip">
                  <svg class="image-hotspot-tooltip-close-icon" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M18 6L6 18M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </button>
              </div>

              {% if block.settings.description != blank %}
                <div class="image-hotspot-tooltip-description block-text block-text-sm block-rte" data-setting="description">
                  {{ block.settings.description | raw }}
                </div>
              {% endif %}

              {% if block.settings.button_link.href != blank and block.settings.button_link.text != blank %}
                <div class="image-hotspot-tooltip-footer">
                  <a
                    href="{{ block.settings.button_link.href }}"
                    class="widget-button"
                    data-setting="button_link"
                    {% if block.settings.button_link.target == '_blank' %}
                      target="_blank" rel="noopener"
                    {% endif %}
                  >
                    {{ block.settings.button_link.text }}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <script>
    (function () {
      const widget = document.getElementById('{{ widget.id }}');
      if (!widget || widget.dataset.initialized) return;
      widget.dataset.initialized = 'true';

      const hotspots = widget.querySelectorAll('.image-hotspot');

      hotspots.forEach((hotspot) => {
        const button = hotspot.querySelector('.image-hotspot-button');
        const tooltip = hotspot.querySelector('.image-hotspot-tooltip');
        const closeButton = hotspot.querySelector('.image-hotspot-tooltip-close');

        if (!button || !tooltip) return;

        // Toggle tooltip
        const toggleTooltip = () => {
          const isVisible = tooltip.classList.contains('is-visible');

          // Close all other tooltips first
          widget.querySelectorAll('.image-hotspot-tooltip.is-visible').forEach((t) => {
            t.classList.remove('is-visible');
            t.setAttribute('aria-hidden', 'true');
            // Reset positioning
            t.style.insetInlineStart = '';
            t.style.insetInlineEnd = '';
            t.style.transform = '';
          });
          widget.querySelectorAll('.image-hotspot-button.is-active').forEach((b) => {
            b.classList.remove('is-active');
            b.setAttribute('aria-expanded', 'false');
          });

          if (!isVisible) {
            tooltip.classList.add('is-visible');
            tooltip.setAttribute('aria-hidden', 'false');
            button.classList.add('is-active');
            button.setAttribute('aria-expanded', 'true');
            closeButton?.focus();

            // Smart positioning: check if tooltip would go off-screen
            setTimeout(() => {
              const tooltipRect = tooltip.getBoundingClientRect();
              const viewportWidth = window.innerWidth;

              // If tooltip goes off right edge
              if (tooltipRect.right > viewportWidth - 16) {
                tooltip.style.insetInlineStart = 'auto';
                tooltip.style.insetInlineEnd = '0';
                tooltip.style.transform = 'none';
              }
              // If tooltip goes off left edge
              else if (tooltipRect.left < 16) {
                tooltip.style.insetInlineStart = '0';
                tooltip.style.insetInlineEnd = 'auto';
                tooltip.style.transform = 'none';
              }
            }, 0);
          }
        };

        // Button click
        button.addEventListener('click', (e) => {
          e.stopPropagation();
          toggleTooltip();
        });

        // Keyboard support
        button.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            toggleTooltip();
          }
        });

        // Close button
        if (closeButton) {
          closeButton.addEventListener('click', (e) => {
            e.stopPropagation();
            tooltip.classList.remove('is-visible');
            tooltip.setAttribute('aria-hidden', 'true');
            tooltip.style.insetInlineStart = '';
            tooltip.style.insetInlineEnd = '';
            tooltip.style.transform = '';
            button.classList.remove('is-active');
            button.setAttribute('aria-expanded', 'false');
            button.focus();
          });
        }
      });

      // Close tooltips when clicking outside
      document.addEventListener('click', (e) => {
        if (!widget.contains(e.target)) {
          widget.querySelectorAll('.image-hotspot-tooltip.is-visible').forEach((tooltip) => {
            tooltip.classList.remove('is-visible');
            tooltip.setAttribute('aria-hidden', 'true');
            tooltip.style.insetInlineStart = '';
            tooltip.style.insetInlineEnd = '';
            tooltip.style.transform = '';
          });
          widget.querySelectorAll('.image-hotspot-button.is-active').forEach((button) => {
            button.classList.remove('is-active');
            button.setAttribute('aria-expanded', 'false');
          });
        }
      });

      // Close tooltips with ESC key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          const activeTooltips = widget.querySelectorAll('.image-hotspot-tooltip.is-visible');
          if (activeTooltips.length > 0) {
            activeTooltips.forEach((tooltip) => {
              tooltip.classList.remove('is-visible');
              tooltip.style.insetInlineStart = '';
              tooltip.style.insetInlineEnd = '';
              tooltip.style.transform = '';
            });
            widget.querySelectorAll('.image-hotspot-button.is-active').forEach((button) => {
              button.classList.remove('is-active');
              button.setAttribute('aria-expanded', 'false');
              button.focus();
            });
          }
        }
      });
    })();
  </script>
</section>
