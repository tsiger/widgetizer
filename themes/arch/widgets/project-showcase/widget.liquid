<section
  id="{{ widget.id }}"
  class="widget-project-showcase widget"
  data-widget-id="{{ widget.id }}"
  data-widget-type="project-showcase"
>
  <style>
    #{{ widget.id }} {
      & .project-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }

      & .widget-card {
        position: relative;
        padding: 0;
        overflow: hidden;

        &:hover .project-image {
          transform: scale(1.05);
        }

        &:hover .project-overlay {
          opacity: 1;
        }
      }

      & .project-image {
        width: 100%;
        height: auto;
        aspect-ratio: 16/9;
        object-fit: cover;
        display: block;
        transition: transform 0.3s ease;
      }

      & .project-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 60%);
        display: flex;
        align-items: flex-end;
        padding: var(--space-lg);
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      & .project-content {
        color: var(--color-white);
      }

      & .project-title {
        color: var(--color-white);
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-bold);
        margin: 0;
      }

      & .project-description {
        color: rgba(255, 255, 255, 0.8);
        font-size: var(--font-size-sm);
        margin-block-start: var(--space-xs);
      }

      @media (min-width: 750px) {
        & .project-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 990px) {
        & .project-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
    }
  </style>

  <div class="widget-container">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <div class="project-grid">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <article class="widget-card" data-block-id="{{ blockId }}">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image: 'large', 'project-image' }}
            {% else %}
              <div class="project-image" style="background-color: var(--bg-secondary);"></div>
            {% endif %}
            <div class="project-overlay">
              <div class="project-content">
                {% if block.settings.title != blank %}
                  <h3 class="project-title" data-setting="title">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="project-description" data-setting="description">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            </div>
            {% if block.settings.link.href != blank %}
              <a
                href="{{ block.settings.link.href }}"
                class="widget-card-link"
                target="{{ block.settings.link.target | default: '_self' }}"
                aria-label="{{ block.settings.title }}"
              ></a>
            {% endif %}
          </article>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
