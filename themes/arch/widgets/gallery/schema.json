{
  "type": "gallery",
  "displayName": "Gallery",
  "aliases": ["images", "photos", "portfolio", "showcase"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Project Gallery"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns (Desktop)",
      "default": 4,
      "min": 2,
      "max": 5,
      "step": 1
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Image Aspect Ratio",
      "default": "4 / 3",
      "options": [
        { "value": "auto", "label": "Auto" },
        { "value": "contain", "label": "Show Full Image" },
        { "value": "1 / 1", "label": "Square (1:1)" },
        { "value": "4 / 3", "label": "Standard (4:3)" },
        { "value": "3 / 2", "label": "Landscape (3:2)" },
        { "value": "3 / 4", "label": "Portrait (3:4)" },
        { "value": "16 / 9", "label": "Widescreen (16:9)" }
      ]
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "light",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
