<section
  id="{{ widget.id }}"
  class="widget widget-type-featured-cards widget-{{ widget.id }} {% if widget.settings.style == 'list' %}style-list{% endif %}"
  {% if widget.settings.background == 'secondary' %}
    style="--widget-bg-color: var(--bg-secondary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="featured-cards"
>
  <style>
    .widget-{{ widget.id }} {
      /* Featured-specific elements */
      & .featured-image-container {
        position: relative;
      }

      & .widget-card-image {
        height: 200px;
      }

      & .featured-tag {
        position: absolute;
        top: var(--space-sm);
        left: var(--space-sm);
        background: var(--accent);
        color: var(--accent-text);
        padding: var(--space-xs) var(--space-sm);
        font-size: var(--font-size-xs);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      & .featured-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--space-md);
      }

      & .featured-pricing {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        flex-shrink: 0;
      }

      & .featured-price {
        font-size: var(--font-size-xl);
        color: var(--accent);
      }

      & .featured-original-price {
        font-size: var(--font-size-base);
        color: var(--text-muted);
        text-decoration: line-through;
      }

      & .featured-availability {
        display: inline-flex;
        align-items: center;
        gap: var(--space-xs);
        font-size: var(--font-size-sm);
        color: var(--text-muted);
        margin-block-start: var(--space-xs);
      }

      & .featured-availability::before {
        content: "üïê";
      }

      /* List style variant */
      &.style-list .widget-card-grid {
        gap: 0;
      }

      &.style-list .widget-card {
        flex-direction: row;
        border-left: none;
        border-right: none;
        border-top: none;
        background: transparent;
      }

      &.style-list .widget-card:first-child {
        border-top: var(--border-width-thin) solid var(--border-color);
      }

      &.style-list .featured-image-container {
        flex-shrink: 0;
        width: 120px;
      }

      &.style-list .widget-card-image {
        height: 120px;
      }

      &.style-list .widget-card-content {
        flex: 1;
        padding: var(--space-md);
      }

      &.style-list .widget-card-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.background == 'secondary' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <ul class="widget-card-grid">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <li class="widget-card" data-block-id="{{ blockId }}">
            {% if block.settings.image != blank %}
              <div class="featured-image-container">
                {{ block.settings.image | image: 'medium', 'widget-card-image' }}
                {% if block.settings.tag != blank %}
                  <span class="featured-tag" data-setting="tag">{{ block.settings.tag }}</span>
                {% endif %}
              </div>
            {% endif %}

            <div class="widget-card-content">
              <div class="featured-header">
                {% if block.settings.name != blank %}
                  <h3 class="widget-card-title" data-setting="name">{{ block.settings.name }}</h3>
                {% endif %}
                <div class="featured-pricing">
                  {% if block.settings.original_price != blank %}
                    <span class="featured-original-price" data-setting="original_price">
                      {{- block.settings.original_price -}}
                    </span>
                  {% endif %}
                  {% if block.settings.price != blank %}
                    <span class="featured-price" data-setting="price">{{ block.settings.price }}</span>
                  {% endif %}
                </div>
              </div>

              {% if block.settings.description != blank %}
                <p class="widget-card-description" data-setting="description">{{ block.settings.description }}</p>
              {% endif %}

              {% if block.settings.availability != blank %}
                <span class="featured-availability" data-setting="availability">{{ block.settings.availability }}</span>
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
