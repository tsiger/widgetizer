{
  "type": "bento-grid",
  "displayName": "Bento Grid",
  "aliases": ["dashboard", "tiles", "highlights", "featured grid"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Feature Spotlight"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },

    {
      "type": "select",
      "id": "gap",
      "label": "Gap Size",
      "default": "var(--space-md)",
      "options": [
        { "value": "var(--space-sm)", "label": "Small" },
        { "value": "var(--space-md)", "label": "Medium" },
        { "value": "var(--space-lg)", "label": "Large" },
        { "value": "var(--space-xl)", "label": "Extra Large" }
      ]
    },
    {
      "type": "select",
      "id": "background",
      "label": "Background",
      "default": "primary",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "item",
      "displayName": "Bento Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Bento Tile"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Describe this featured item here."
        },
        {
          "type": "image",
          "id": "image",
          "label": "Background image"
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay color",
          "default": "#00000080",
          "allow_alpha": true,
          "description": "Applies only if there is a background image."
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background color",
          "default": "#f9f9f9"
        },
        {
          "type": "header",
          "content": "Layout"
        },
        {
          "type": "range",
          "id": "col_span",
          "label": "Column Span",
          "min": 1,
          "max": 4,
          "step": 1,
          "default": 1
        },
        {
          "type": "range",
          "id": "row_span",
          "label": "Row Span",
          "min": 1,
          "max": 2,
          "step": 1,
          "default": 1
        },
        {
          "type": "header",
          "content": "Style"
        },
        {
          "type": "select",
          "id": "text_color",
          "label": "Text Color",
          "default": "dark",
          "options": [
            { "value": "dark", "label": "Dark" },
            { "value": "light", "label": "Light" }
          ]
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Text Alignment",
          "default": "start",
          "options": [
            { "value": "start", "label": "Left" },
            { "value": "center", "label": "Center" }
          ]
        },
        {
          "type": "link",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
      "type": "item",
      "settings": {
        "title": "Main Highlight",
        "text": "This is a larger bento tile spanning multiple columns.",
        "col_span": 2,
        "background_color": "#000000",
        "text_color": "light"
      }
    },
    {
      "type": "item",
      "settings": {
        "title": "Sub Feature",
        "col_span": 1,
        "background_color": "#f9f9f9"
      }
    },
    {
      "type": "item",
      "settings": {
        "title": "Visual Entry",
        "col_span": 1,
        "row_span": 2,
        "background_color": "#f0f0f0"
      }
    }
  ]
}
