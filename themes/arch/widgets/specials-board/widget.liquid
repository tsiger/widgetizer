<section
  id="{{ widget.id }}"
  class="widget widget-specials-board"
  data-widget-id="{{ widget.id }}"
  data-widget-type="specials-board"
>
  <style>
    #{{ widget.id }} {
      & .specials-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }

      & .special-card {
        display: flex;
        flex-direction: column;
        background: var(--surface-secondary);
        border-radius: var(--radius-md);
        overflow: hidden;
        border: var(--border-width-thin) solid var(--border-light);
      }

      & .special-image-container {
        position: relative;
      }

      & .special-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      & .special-tag {
        position: absolute;
        top: var(--space-sm);
        left: var(--space-sm);
        background: var(--color-primary);
        color: white;
        padding: var(--space-xs) var(--space-sm);
        border-radius: var(--radius-sm);
        font-size: var(--font-size-xs);
        font-weight: var(--font-weight-bold);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      & .special-content {
        padding: var(--space-lg);
        display: flex;
        flex-direction: column;
        gap: var(--space-sm);
      }

      & .special-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--space-md);
      }

      & .special-name {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-bold);
        margin: 0;
      }

      & .special-pricing {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        flex-shrink: 0;
      }

      & .special-price {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-bold);
        color: var(--color-primary);
      }

      & .special-original-price {
        font-size: var(--font-size-base);
        color: var(--text-muted);
        text-decoration: line-through;
      }

      & .special-description {
        color: var(--text-secondary);
        font-size: var(--font-size-sm);
        margin: 0;
        line-height: 1.6;
      }

      & .special-availability {
        display: inline-flex;
        align-items: center;
        gap: var(--space-xs);
        font-size: var(--font-size-sm);
        color: var(--text-muted);
        margin-block-start: var(--space-xs);
      }

      & .special-availability::before {
        content: "üïê";
      }

      /* List style variant */
      &.style-list .specials-grid {
        gap: 0;
      }

      &.style-list .special-card {
        flex-direction: row;
        border-radius: 0;
        border-left: none;
        border-right: none;
        border-top: none;
        background: transparent;
      }

      &.style-list .special-card:first-child {
        border-top: var(--border-width-thin) solid var(--border-light);
      }

      &.style-list .special-image-container {
        flex-shrink: 0;
        width: 120px;
      }

      &.style-list .special-image {
        height: 120px;
        border-radius: var(--radius-sm);
      }

      &.style-list .special-content {
        flex: 1;
        padding: var(--space-md);
      }

      @media (min-width: 750px) {
        & .specials-grid {
          grid-template-columns: repeat(2, 1fr);
        }

        &.style-list .specials-grid {
          grid-template-columns: 1fr;
        }
      }

      @media (min-width: 990px) {
        & .specials-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }
    }
  </style>

  <div class="widget-container">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          <h2 class="widget-title" data-setting="title">{{ widget.settings.title }}</h2>
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content {% if widget.settings.style == 'list' %}style-list{% endif %}">
      <div class="specials-grid">
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <div class="special-card" data-block-id="{{ blockId }}">
            {% if block.settings.image != blank %}
              <div class="special-image-container">
                {{ block.settings.image | image: 'medium', 'special-image' }}
                {% if block.settings.tag != blank %}
                  <span class="special-tag" data-setting="tag">{{ block.settings.tag }}</span>
                {% endif %}
              </div>
            {% endif %}

            <div class="special-content">
              <div class="special-header">
                {% if block.settings.name != blank %}
                  <h3 class="special-name" data-setting="name">{{ block.settings.name }}</h3>
                {% endif %}
                <div class="special-pricing">
                  {% if block.settings.original_price != blank %}
                    <span class="special-original-price" data-setting="original_price">
                      {{- block.settings.original_price -}}
                    </span>
                  {% endif %}
                  {% if block.settings.price != blank %}
                    <span class="special-price" data-setting="price">{{ block.settings.price }}</span>
                  {% endif %}
                </div>
              </div>

              {% if block.settings.description != blank %}
                <p class="special-description" data-setting="description">{{ block.settings.description }}</p>
              {% endif %}

              {% if block.settings.availability != blank %}
                <span class="special-availability" data-setting="availability">{{ block.settings.availability }}</span>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
