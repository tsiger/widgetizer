<section
  id="{{ widget.id }}"
  class="widget widget-type-testimonials widget-{{ widget.id }} color-scheme-{{ widget.settings.color_scheme }}"
  {% if widget.settings.color_scheme == 'dark' %}
    style="--widget-bg-color: var(--bg-primary);"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="testimonials"
  {% if widget.index != null %}data-widget-index="{{ widget.index }}"{% endif %}
>
  <style>
    .widget-{{ widget.id }} {
      & .testimonial-card {
        display: flex;
        flex-direction: column;
        padding: var(--space-xl);
        background: var(--bg-secondary);
        border-radius: var(--radius-md);
        border: var(--border-width-thin) solid var(--border-color);
      }

      & .testimonial-quote {
        margin: 0 0 var(--space-lg) 0;
        position: relative;
      }

      & .testimonial-quote::before {
        content: """;
        position: absolute;
        top: -0.5em;
        left: -0.3em;
        font-size: 4rem;
        color: var(--accent);
        opacity: 0.2;
        font-family: Georgia, serif;
        line-height: 1;
      }

      & .testimonial-rating {
        display: flex;
        gap: 0.2rem;
        margin-block-end: var(--space-md);
      }

      & .testimonial-star {
        color: #fbbf24;
        font-size: 1.8rem;
        line-height: 1;
      }

      & .testimonial-star.empty {
        color: var(--border-color);
      }

      & .testimonial-author {
        display: flex;
        align-items: center;
        gap: var(--space-md);
        margin-block-start: auto;
      }

      & .testimonial-author-no-avatar {
        gap: 0;
      }

      & .testimonial-avatar {
        width: 4.8rem;
        height: 4.8rem;
        border-radius: 50%;
        object-fit: cover;
      }

      & .testimonial-avatar-placeholder {
        width: 4.8rem;
        height: 4.8rem;
        border-radius: 50%;
        background: var(--bg-secondary);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      & .testimonial-info {
        display: flex;
        flex-direction: column;
        gap: var(--space-2xs);
      }

      & .testimonial-name {
        margin: 0;
      }

      & .testimonial-title {
        margin: 0;
      }
    }
  </style>

  <div class="widget-container {% if widget.settings.color_scheme == 'dark' %}widget-container-padded{% endif %}">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          {% if widget.index == 1 %}
            <h1 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h1>
          {% else %}
            <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
          {% endif %}
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <ul
        class="widget-card-grid widget-grid"
        style="--grid-cols-desktop: {{ widget.settings.columns_desktop }};"
      >
        {% for blockId in widget.blocksOrder %}
          {% assign block = widget.blocks[blockId] %}
          <li class="testimonial-card" data-block-id="{{ blockId }}">
            {% if block.settings.rating != blank %}
              <div class="testimonial-rating">
                {% assign rating = block.settings.rating | plus: 0 %}
                {% for i in (1..5) %}
                  {% if i <= rating %}
                    <span class="testimonial-star">★</span>
                  {% else %}
                    <span class="testimonial-star empty">★</span>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}

            {% if block.settings.quote != blank %}
              <p class="testimonial-quote block-text" data-setting="quote">{{ block.settings.quote }}</p>
            {% endif %}

            <div class="testimonial-author{% if block.settings.avatar == blank %} testimonial-author-no-avatar{% endif %}">
              {% if block.settings.avatar != blank %}
                {{ block.settings.avatar | image: 'small', 'testimonial-avatar' }}
              {% endif %}

              <div class="testimonial-info">
                {% if block.settings.name != blank %}
                  <p class="testimonial-name block-text block-text-semibold block-text-heading" data-setting="name">{{ block.settings.name }}</p>
                {% endif %}
                {% if block.settings.title != blank %}
                  <p class="testimonial-title block-text block-text-sm block-text-muted" data-setting="title">{{ block.settings.title }}</p>
                {% endif %}
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
