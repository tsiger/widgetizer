{
  "type": "pricing",
  "displayName": "Pricing",
  "aliases": ["plans", "packages", "subscription", "pricing tiers"],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Pricing Plans"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Choose the plan that fits your needs."
    },
    {
      "type": "header",
      "id": "display_header",
      "label": "Display"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns (Desktop)",
      "default": 3,
      "min": 2,
      "max": 5,
      "step": 1
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "standard",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "highlight", "label": "Highlight" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "plan",
      "displayName": "Plan",
      "settings": [
        {
          "type": "header",
          "id": "content_header",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Plan name",
          "default": "Pro"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "$49"
        },
        {
          "type": "text",
          "id": "period",
          "label": "Period",
          "default": "per month"
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (one per line)",
          "description": "Start a line with + for a checkmark or - for a cross.",
          "default": "+ Unlimited Projects\n+ Priority Support\n+ 10GB Storage"
        },
        {
          "type": "link",
          "id": "button_link",
          "label": "Button",
          "default": {
            "text": "Get Started",
            "href": "#",
            "target": "_self"
          }
        },
        {
          "type": "header",
          "id": "options_header",
          "label": "Options"
        },
        {
          "type": "checkbox",
          "id": "featured",
          "label": "Featured plan",
          "default": false
        }
      ]
    }
  ],
  "defaultBlocks": [
    {
      "type": "plan",
      "settings": {
        "title": "Starter",
        "price": "$19",
        "period": "per month",
        "features": "+ 5 Projects\n+ Email Support\n+ 2GB Storage\n+ Basic Analytics",
        "button_link": {
          "text": "Get Started",
          "href": "#",
          "target": "_self"
        },
        "featured": false
      }
    },
    {
      "type": "plan",
      "settings": {
        "title": "Professional",
        "price": "$49",
        "period": "per month",
        "features": "+ Unlimited Projects\n+ Priority Support\n+ 10GB Storage\n+ Advanced Analytics\n+ Custom Domain",
        "button_link": {
          "text": "Get Started",
          "href": "#",
          "target": "_self"
        },
        "featured": true
      }
    },
    {
      "type": "plan",
      "settings": {
        "title": "Enterprise",
        "price": "$99",
        "period": "per month",
        "features": "+ Unlimited Everything\n+ 24/7 Phone Support\n+ 100GB Storage\n+ Advanced Analytics\n+ Custom Domain\n+ Dedicated Manager",
        "button_link": {
          "text": "Contact Sales",
          "href": "#",
          "target": "_self"
        },
        "featured": false
      }
    }
  ]
}
