<section
  id="{{ widget.id }}"
  class="widget widget-sticky-split {% if widget.settings.background_color != blank %}has-bg-color{% endif %}"
  {% if widget.settings.background_color != blank %}
    style="--widget-bg-color: {{ widget.settings.background_color }};"
  {% endif %}
  data-widget-id="{{ widget.id }}"
  data-widget-type="sticky-split"
>
  <style>
    #{{ widget.id }} {
      & .sticky-split-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-3xl);
        position: relative;
      }

      & .sticky-column {
        position: relative;
        height: min-content;
      }

      & .sticky-image-container {
        width: 100%;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        background: var(--bg-secondary);
        aspect-ratio: 4/5;

        & img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      & .sticky-content-box {
        margin-block-start: var(--space-lg);
      }

      & .scrolling-column {
        display: flex;
        flex-direction: column;
        gap: var(--space-3xl);
      }

      & .split-item {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
      }

      & .split-item-icon {
        color: var(--text-primary);
        width: 2.4rem;
        height: 2.4rem;

        & svg {
          width: 100%;
          height: 100%;
        }
      }

      & .split-item-action {
        margin-block-start: var(--space-md);
      }

      @media (min-width: 990px) {
        & .sticky-split-grid {
          grid-template-columns: repeat(2, 1fr);
          align-items: start;
        }

        & .sticky-column {
          position: sticky;
          inset-block-start: var(--space-3xl);
          order: {% if widget.settings.sticky_side == 'right' %}2{% else %}1{% endif %};
        }

        & .scrolling-column {
          order: {% if widget.settings.sticky_side == 'right' %}1{% else %}2{% endif %};
        }

        & .sticky-image-container {
          height: calc(100vh - 2 * var(--space-3xl));
          aspect-ratio: auto;
        }
      }
    }
  </style>

  <div class="widget-container">
    {% if widget.settings.title != blank or widget.settings.description != blank or widget.settings.eyebrow != blank %}
      <div class="widget-header">
        {% if widget.settings.eyebrow != blank %}
          <span class="widget-eyebrow" data-setting="eyebrow">{{ widget.settings.eyebrow }}</span>
        {% endif %}
        {% if widget.settings.title != blank %}
          <h2 class="widget-headline" data-setting="title">{{ widget.settings.title }}</h2>
        {% endif %}
        {% if widget.settings.description != blank %}
          <p class="widget-description" data-setting="description">{{ widget.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="widget-content">
      <div class="sticky-split-grid">
        <!-- Sticky Column -->
        <div class="sticky-column">
          <div class="sticky-image-container">
            {% if widget.settings.sticky_image != blank %}
              {{ widget.settings.sticky_image | image: 'large' }}
            {% else %}
              {% placeholder_image %}
            {% endif %}
          </div>
          {% if widget.settings.sticky_title != blank %}
            <div class="sticky-content-box">
              <h3 class="widget-title" data-setting="sticky_title">{{ widget.settings.sticky_title }}</h3>
            </div>
          {% endif %}
        </div>

        <!-- Scrolling Column -->
        <div class="scrolling-column">
          {% for blockId in widget.blocksOrder %}
            {% assign block = widget.blocks[blockId] %}
            <div class="split-item" data-block-id="{{ blockId }}">
              {% if block.settings.icon != blank %}
                <div class="split-item-icon" data-setting="icon">
                  <svg class="widget-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    {% case block.settings.icon %}
                      {% when 'lightning' %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      {% when 'phone' %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      {% when 'shield' %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      {% when 'chart' %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                      {% when 'star' %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                      {% when 'heart' %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                      {% when 'check' %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                      {% when 'cog' %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      {% else %}
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    {% endcase %}
                  </svg>
                </div>
              {% endif %}

              <div class="split-item-content">
                <h3 class="widget-title" data-setting="title">{{ block.settings.title }}</h3>
                <p class="widget-text" data-setting="text">{{ block.settings.text }}</p>
                {% if block.settings.link.href != blank %}
                  <div class="split-item-action">
                    <a href="{{ block.settings.link.href }}" class="widget-button widget-button-secondary">
                      {{ block.settings.link.text | default: 'Read More' }}
                      <svg class="widget-button-icon">
                        <use href="/assets/lucide-sprite.svg#arrow-right"></use>
                      </svg>
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
