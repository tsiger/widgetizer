<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% seo %}
    {% fonts %}

    {% theme_settings %}
    {% asset "base.css" %}
    {% header_assets %}
  </head>
  <body class="{{ body_class }}">
    <a href="#main-content" class="visually-hidden skip-link">Skip to main content</a>
    {{ header }}
    <main id="main-content" class="main-content">
      {{ main_content }}
    </main>
    {{ footer }}

    {% asset "scripts.js" %}
    {% footer_assets %}
  </body>
</html>

