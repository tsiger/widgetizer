<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% seo %}
    {% fonts %}

    {% theme_settings %}

    {% asset src: "base.css" %}
    {% unless theme.layout.enable_reveal_animations %}
      <style>.reveal { opacity: 1 !important; transform: none !important; }</style>
    {% endunless %}
    {% custom_css %}
    {% custom_head_scripts %}
    {% header_assets %}
  </head>
  <body class="{{ body_class }}">
    <a href="#main-content" class="visually-hidden skip-link">Skip to main content</a>
    {{ header | raw }}
    <main id="main-content" class="main-content">
      {{ main_content | raw }}
    </main>
    {{ footer | raw }}

    {% asset src: "scripts.js", defer: true %}
    {% if theme.layout.enable_reveal_animations %}
      {% asset src: "reveal.js", defer: true %}
    {% endif %}
    {% footer_assets %}
    {% custom_footer_scripts %}
  </body>
</html>

