{
  "name": "Arch",
  "version": "0.8.9",
  "description": "The default Widgetizer theme",
  "author": "Widgetizer",
  "settings": {
    "global": {
      "layout": [
        {
          "type": "header",
          "id": "layout_header",
          "label": "Animations"
        },
        {
          "type": "checkbox",
          "id": "enable_reveal_animations",
          "label": "Enable scroll reveal animations",
          "default": false,
          "description": "Animate elements as they scroll into view"
        }
      ],
      "colors": [
        {
          "type": "header",
          "id": "colors_standard_header",
          "label": "Standard Colors"
        },
        {
          "type": "color",
          "id": "standard_bg_primary",
          "label": "Primary Background",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "standard_bg_secondary",
          "label": "Secondary Background",
          "default": "#f1f5f9",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "standard_text_content",
          "label": "Content Text",
          "default": "#1f2937",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "standard_text_heading",
          "label": "Heading Text",
          "default": "#0f172a",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "standard_text_muted",
          "label": "Muted Text",
          "default": "#6b7280",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "standard_border_color",
          "label": "Border Color",
          "default": "#e2e8f0",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "standard_accent",
          "label": "Accent Color",
          "default": "#DE1877",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "standard_accent_text",
          "label": "Accent Text Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "standard_rating_star",
          "label": "Rating Star Color",
          "default": "#fbbf24",
          "outputAsCssVar": true
        },
        {
          "type": "header",
          "id": "colors_highlight_header",
          "label": "Highlight Colors"
        },
        {
          "type": "color",
          "id": "highlight_bg_primary",
          "label": "Primary Background",
          "default": "#233c54",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "highlight_bg_secondary",
          "label": "Secondary Background",
          "default": "#152a3e",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "highlight_text_content",
          "label": "Content Text",
          "default": "#eaf3fc",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "highlight_text_heading",
          "label": "Heading Text",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "highlight_text_muted",
          "label": "Muted Text",
          "default": "#64748b",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "highlight_border_color",
          "label": "Border Color",
          "default": "#526884",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "highlight_accent",
          "label": "Accent Color",
          "default": "#DE1877",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "highlight_accent_text",
          "label": "Accent Text Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "highlight_rating_star",
          "label": "Rating Star Color",
          "default": "#fbbf24",
          "outputAsCssVar": true
        }
      ],
      "typography": [
        {
          "type": "header",
          "id": "typography_header",
          "label": "Typography"
        },
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Heading Font",
          "default": {
            "stack": "\"Fraunces\", serif",
            "weight": 600
          }
        },
        {
          "type": "font_picker",
          "id": "body_font",
          "label": "Body Font",
          "default": {
            "stack": "\"Inter\", sans-serif",
            "weight": 400
          }
        }
      ],
      "privacy": [
        {
          "type": "header",
          "id": "privacy_header",
          "label": "Privacy"
        },
        {
          "type": "checkbox",
          "id": "use_bunny_fonts",
          "label": "Use Privacy-Friendly Font CDN",
          "default": false,
          "description": "Enable to serve Google Fonts from Bunny CDN (GDPR-compliant, no tracking)"
        }
      ],
      "advanced": [
        {
          "type": "header",
          "id": "advanced_header",
          "label": "Advanced"
        },
        {
          "type": "code",
          "id": "custom_css",
          "label": "Custom CSS",
          "description": "Add custom CSS that will be injected in the <head> section.",
          "language": "css",
          "rows": 12,
          "default": ""
        },
        {
          "type": "code",
          "id": "custom_head_scripts",
          "label": "Custom Head Scripts",
          "description": "Add custom scripts (e.g., Google Analytics) that will be injected in the <head> section.",
          "language": "html",
          "rows": 12,
          "default": ""
        },
        {
          "type": "code",
          "id": "custom_footer_scripts",
          "label": "Custom Footer Scripts",
          "description": "Add custom scripts that will be injected before the closing </body> tag.",
          "language": "html",
          "rows": 12,
          "default": ""
        }
      ]
    }
  }
}
