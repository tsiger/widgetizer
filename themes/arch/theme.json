{
  "name": "Arch",
  "version": "1.0.0",
  "description": "The default Widgetizer theme",
  "author": "Widgetizer",
  "settings": {
    "global": {
      "colors": [
        {
          "type": "color",
          "id": "bg_primary",
          "label": "Primary Background",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "bg_secondary",
          "label": "Secondary Background",
          "default": "#f9f9f9",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "text_content",
          "label": "Content Text",
          "default": "#333333",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "text_heading",
          "label": "Heading Text",
          "default": "#000000",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "text_muted",
          "label": "Muted Text",
          "default": "#666666",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border Color",
          "default": "#e0e0e0",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "accent",
          "label": "Accent Color",
          "default": "#0d47b7",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "accent_text",
          "label": "Accent Text Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "inverse_bg",
          "label": "Inverse Background",
          "default": "#000000",
          "outputAsCssVar": true,
          "description": "Background color for widgets with dark background and light text"
        },
        {
          "type": "color",
          "id": "inverse_text",
          "label": "Inverse Text",
          "default": "#ffffff",
          "outputAsCssVar": true,
          "description": "Text color for widgets with dark background and light text"
        }
      ],
      "typography": [
        {
          "type": "header",
          "id": "typography_header",
          "label": "Typography"
        },
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Heading Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 700
          }
        },
        {
          "type": "font_picker",
          "id": "body_font",
          "label": "Body Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 400
          }
        }
      ],
      "privacy": [
        {
          "type": "header",
          "id": "privacy_header",
          "label": "Privacy"
        },
        {
          "type": "checkbox",
          "id": "use_bunny_fonts",
          "label": "Use Privacy-Friendly Font CDN",
          "default": false,
          "description": "Enable to serve Google Fonts from Bunny CDN (GDPR-compliant, no tracking)"
        }
      ]
    }
  }
}
