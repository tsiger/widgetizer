{
  "name": "Arch",
  "version": "1.0.0",
  "description": "The default Widgetizer theme",
  "author": "Widgetizer",
  "settings": {
    "global": {
      "colors": [
        {
          "type": "header",
          "id": "colors_light_header",
          "label": "Light Colors"
        },
        {
          "type": "color",
          "id": "light_bg_primary",
          "label": "Primary Background",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_bg_secondary",
          "label": "Secondary Background",
          "default": "#f9f9f9",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_text_content",
          "label": "Content Text",
          "default": "#333333",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_text_heading",
          "label": "Heading Text",
          "default": "#000000",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_text_muted",
          "label": "Muted Text",
          "default": "#666666",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_border_color",
          "label": "Border Color",
          "default": "#e0e0e0",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_accent",
          "label": "Accent Color",
          "default": "#0d47b7",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_accent_text",
          "label": "Accent Text Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "header",
          "id": "colors_dark_header",
          "label": "Dark Colors"
        },
        {
          "type": "color",
          "id": "dark_bg_primary",
          "label": "Primary Background",
          "default": "#0a0a0a",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_bg_secondary",
          "label": "Secondary Background",
          "default": "#1a1a1a",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_text_content",
          "label": "Content Text",
          "default": "#e0e0e0",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_text_heading",
          "label": "Heading Text",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_text_muted",
          "label": "Muted Text",
          "default": "#888888",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_border_color",
          "label": "Border Color",
          "default": "#333333",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_accent",
          "label": "Accent Color",
          "default": "#3b82f6",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_accent_text",
          "label": "Accent Text Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        }
      ],
      "typography": [
        {
          "type": "header",
          "id": "typography_header",
          "label": "Typography"
        },
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Heading Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 700
          }
        },
        {
          "type": "font_picker",
          "id": "body_font",
          "label": "Body Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 400
          }
        }
      ],
      "privacy": [
        {
          "type": "header",
          "id": "privacy_header",
          "label": "Privacy"
        },
        {
          "type": "checkbox",
          "id": "use_bunny_fonts",
          "label": "Use Privacy-Friendly Font CDN",
          "default": false,
          "description": "Enable to serve Google Fonts from Bunny CDN (GDPR-compliant, no tracking)"
        }
      ]
    }
  }
}
