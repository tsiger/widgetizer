{
  "name": "Arch",
  "version": "1.0.0",
  "description": "The default Widgetizer theme",
  "author": "Widgetizer",
  "settings": {
    "global": {
      "colors": [
        {
          "type": "header",
          "id": "colors_light_header",
          "label": "Light Colors"
        },
        {
          "type": "color",
          "id": "light_bg_primary",
          "label": "Primary Background",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_bg_secondary",
          "label": "Secondary Background",
          "default": "#f1f5f9",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_text_content",
          "label": "Content Text",
          "default": "#1f2937",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_text_heading",
          "label": "Heading Text",
          "default": "#0f172a",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_text_muted",
          "label": "Muted Text",
          "default": "#6b7280",
          "outputAsCssVar": true,
          "value": "#4f68ad"
        },
        {
          "type": "color",
          "id": "light_border_color",
          "label": "Border Color",
          "default": "#e2e8f0",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_accent",
          "label": "Accent Color",
          "default": "#1e3a8a",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_accent_text",
          "label": "Accent Text Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "light_rating_star",
          "label": "Rating Star Color",
          "default": "#fbbf24",
          "outputAsCssVar": true
        },
        {
          "type": "header",
          "id": "colors_dark_header",
          "label": "Dark Colors"
        },
        {
          "type": "color",
          "id": "dark_bg_primary",
          "label": "Primary Background",
          "default": "#eef2f6",
          "outputAsCssVar": true,
          "value": "#233c54"
        },
        {
          "type": "color",
          "id": "dark_bg_secondary",
          "label": "Secondary Background",
          "default": "#e6ebf2",
          "outputAsCssVar": true,
          "value": "#152a3e"
        },
        {
          "type": "color",
          "id": "dark_text_content",
          "label": "Content Text",
          "default": "#1f2937",
          "outputAsCssVar": true,
          "value": "#dbe9f6"
        },
        {
          "type": "color",
          "id": "dark_text_heading",
          "label": "Heading Text",
          "default": "#111827",
          "outputAsCssVar": true,
          "value": "#ffffff"
        },
        {
          "type": "color",
          "id": "dark_text_muted",
          "label": "Muted Text",
          "default": "#64748b",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_border_color",
          "label": "Border Color",
          "default": "#d7dee7",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_accent",
          "label": "Accent Color",
          "default": "#1d4ed8",
          "outputAsCssVar": true,
          "value": "#1c4ccf"
        },
        {
          "type": "color",
          "id": "dark_accent_text",
          "label": "Accent Text Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "dark_rating_star",
          "label": "Rating Star Color",
          "default": "#fbbf24",
          "outputAsCssVar": true
        }
      ],
      "typography": [
        {
          "type": "header",
          "id": "typography_header",
          "label": "Typography"
        },
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Heading Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 700
          },
          "value": {
            "stack": "\"Fraunces\", serif",
            "weight": 600
          }
        },
        {
          "type": "font_picker",
          "id": "body_font",
          "label": "Body Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 400
          },
          "value": {
            "stack": "\"Inter\", sans-serif",
            "weight": 400
          }
        }
      ],
      "privacy": [
        {
          "type": "header",
          "id": "privacy_header",
          "label": "Privacy"
        },
        {
          "type": "checkbox",
          "id": "use_bunny_fonts",
          "label": "Use Privacy-Friendly Font CDN",
          "default": false,
          "description": "Enable to serve Google Fonts from Bunny CDN (GDPR-compliant, no tracking)"
        }
      ]
    }
  }
}