{
  "name": "Arch",
  "version": "1.0.0",
  "description": "A custom theme based on the Arch design system",
  "author": "Widgetizer",
  "settings": {
    "global": {
      "colors": [
        {
          "type": "color",
          "id": "bg_primary",
          "label": "Background Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "text_primary",
          "label": "Text Color",
          "default": "#000000",
          "outputAsCssVar": true
        },
         {
          "type": "color",
          "id": "text_muted",
          "label": "Muted Text Color",
          "default": "#666666",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#000000",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border Color",
          "default": "#e0e0e0",
          "outputAsCssVar": true
        }
      ],
      "typography": [
        {
          "type": "header",
          "id": "typography_header",
          "label": "Typography"
        },
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Heading Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 700
          }
        },
        {
          "type": "font_picker",
          "id": "body_font",
          "label": "Body Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 400
          }
        }
      ],
      "privacy": [
        {
          "type": "header",
          "id": "privacy_header",
          "label": "Privacy"
        },
        {
          "type": "checkbox",
          "id": "use_bunny_fonts",
          "label": "Use Privacy-Friendly Font CDN",
          "default": false,
          "description": "Enable to serve Google Fonts from Bunny CDN (GDPR-compliant, no tracking)"
        }
      ]
    }
  }
}
