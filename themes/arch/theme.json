{
  "name": "Arch",
  "version": "1.0.0",
  "description": "A custom theme based on the Arch design system",
  "author": "Widgetizer",
  "settings": {
    "global": {
      "colors": [
        {
          "type": "color",
          "id": "bg_primary",
          "label": "Background Color",
          "default": "#ffffff",
          "outputAsCssVar": true
        },
        {
          "type": "color",
          "id": "text_primary",
          "label": "Text Color",
          "default": "#000000",
          "outputAsCssVar": true
        }
      ],
      "typography": [
        {
          "type": "header",
          "id": "typography_header",
          "label": "Typography"
        },
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Heading Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 700
          }
        },
        {
          "type": "font_picker",
          "id": "body_font",
          "label": "Body Font",
          "default": {
            "stack": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Helvetica, Arial, sans-serif",
            "weight": 400
          }
        }
      ]
    }
  }
}
