<div class="core-divider" data-widget-id="{{ widget.id }}" data-widget-type="core-divider">
  <style>
    #{{ widget.id }} {
      padding: {{ widget.settings.padding }}px 0;
      width: 100%;
    }

    #{{ widget.id }} .divider-line {
      height: {{ widget.settings.thickness }}px;
      background-color: {{ widget.settings.color }};
      width: {{ widget.settings.width }}%;
      margin: 0 auto;
    }
  </style>

  <div id="{{ widget.id }}" class="divider-container">
    <div class="divider-line"></div>
  </div>

  <script type="application/json" data-widget-schema>
  {
    "type": "core-divider",
    "displayName": "Divider",
    "description": "Add a horizontal divider line",
    "category": "Layout",
    "isCore": true,
    "settings": [
      {
        "type": "color",
        "id": "color",
        "label": "Line Color",
        "description": "Color of the divider line",
        "default": "#E0E0E0"
      },
      {
        "type": "range",
        "id": "thickness",
        "label": "Thickness",
        "description": "Thickness of the divider line in pixels",
        "default": 1,
        "min": 1,
        "max": 10,
        "step": 1
      },
      {
        "type": "range",
        "id": "width",
        "label": "Width",
        "description": "Width of the divider as percentage of container",
        "default": 100,
        "min": 10,
        "max": 100,
        "step": 5
      },
      {
        "type": "range",
        "id": "padding",
        "label": "Padding",
        "description": "Vertical padding around the divider in pixels",
        "default": 20,
        "min": 0,
        "max": 100,
        "step": 5
      }
    ]
  }
  </script>
</div>