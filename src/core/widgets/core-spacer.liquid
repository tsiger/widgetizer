<div class="core-spacer" data-widget-id="{{ widget.id }}" data-widget-type="core-spacer">
  <style>
    #{{ widget.id }} {
      height: {{ widget.settings.height }}px;
      display: block;
      width: 100%;
    }

    @media (max-width: 768px) {
      #{{ widget.id }} {
        height: {{ widget.settings.mobileHeight }}px;
        {% if widget.settings.showOnMobile == false %}
        display: none;
        {% endif %}
      }
    }
  </style>

  <div id="{{ widget.id }}" class="spacer-content" aria-hidden="true"></div>

  <script type="application/json" data-widget-schema>
  {
    "type": "core-spacer",
    "displayName": "Spacer",
    "description": "Add vertical spacing between content sections",
    "category": "Layout",
    "isCore": true,
    "settings": [
      {
        "type": "range",
        "id": "height",
        "label": "Height",
        "description": "The height of the spacer in pixels",
        "default": 40,
        "min": 10,
        "max": 200,
        "step": 10
      },
      {
        "type": "checkbox",
        "id": "showOnMobile",
        "label": "Show on Mobile",
        "description": "Whether to show the spacer on mobile devices",
        "default": true
      },
      {
        "type": "range",
        "id": "mobileHeight",
        "label": "Mobile Height",
        "description": "The height of the spacer on mobile devices in pixels",
        "default": 20,
        "min": 0,
        "max": 100,
        "step": 5
      }
    ]
  }
  </script>
</div>